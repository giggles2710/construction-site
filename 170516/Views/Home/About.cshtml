@section Scripts
{
    <script src="~/Scripts/slippry.min.js"></script>
    <script>
        $(document).ready(function () {
            $(function () {
                var imageSlider = $("#imageSlider").slippry({
                    transition: 'fade',
                    useCSS: true,
                    speed: 1000,
                    pause: 3000,
                    auto: false,
                    preload: 'visible',
                    loadingClass: 'sy-loading',
                    autoHover: false
                });

                $('.stop').click(function () {
                    imageSlider.stopAuto();
                });

                $('.start').click(function () {
                    imageSlider.startAuto();
                });

                $('.prev').click(function () {
                    imageSlider.goToPrevSlide();
                    return false;
                });
                $('.next').click(function () {
                    imageSlider.goToNextSlide();
                    return false;
                });
                $('.reset').click(function () {
                    imageSlider.destroySlider();
                    return false;
                });
                $('.reload').click(function () {
                    imageSlider.reloadSlider();
                    return false;
                });
                $('.init').click(function () {
                    imageSlider = $("#imageSlider").slippry();
                    return false;
                });
            });
        });
    </script>
}