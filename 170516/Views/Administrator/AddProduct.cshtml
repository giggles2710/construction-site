@model _170516.Models.Administrator.CreateProductModel

@{
    ViewBag.Title = "Tạo sản phẩm mới";
}

<div class="row">
    <div class="col-md-12">
        <div class="content-box-large">
            <div class="panel-heading">
                @*nav bar*@
                <ol class="breadcrumb">
                    <li><a href="@Url.Action("ViewProduct","Administrator")">Quản Lý Sản Phẩm</a></li>
                    <li class="active">Tạo Sản Phẩm</li>
                </ol>
                <div class="panel-title title-3">Tạo Sản Phẩm Mới</div>
            </div>
            <div class="panel-body">
                <form id="AddProductForm">
                    <div class="form-horizontal">
                        <div class="row">                            
                            <div class="col-md-8 col-lg-8">
                                <!-- PRODUCT NAME -->
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="ProductName">Tên Sản Phẩm <span class="text-danger">*</span></label>
                                    <div class="col-sm-7">
                                        <input type="text" class="form-control" id="ProductName" name="ProductName">
                                        <span class="input-error-box text-danger"></span>
                                    </div>
                                </div>
                                <!-- PRODUCT CATEGORY -->
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="ProductCategoryID">Danh Mục</label>
                                    <div class="col-sm-7">
                                        @if (Model.CategoryList.Any())
                                        {
                                            <select id="ProductCategoryID" class="form-control" name="ProductCategoryID">
                                                @foreach (var category in Model.CategoryList)
                                                {
                                                    <option value="@category.CategoryID">@category.CategoryName</option>
                                                }
                                            </select>
                                            <span class="field-validation-valid" data-valmsg-for="CategoryID" data-valmsg-replace="true"></span>
                                        }
                                        else
                                        {
                                            <h6>Chưa có dữ liệu</h6>
                                        }

                                    </div>
                                </div>
                                <!-- QUANTITY UNIT IN STOCK -->
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="ProductQuantity">Số Lượng <span class="text-danger">*</span></label>
                                    <div class="col-sm-7">
                                        <input type="number" class="form-control" id="ProductQuantity" name="ProductQuantity">
                                        <span class="input-error-box text-danger"></span>
                                    </div>
                                </div>
                                <!-- WEIGHT -->
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="ProductWeight">Cân Nặng <span class="text-danger">*</span></label>
                                    <div class="col-sm-7">
                                        <input type="text" class="form-control double-input large-input" id="ProductWeight" name="ProductWeight">
                                        <h6>kilogram</h6>
                                        <br />
                                        <span class="input-error-box text-danger"></span>
                                    </div>
                                </div>
                                <!-- DISCOUNT -->
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="ProductDiscount">Khuyến Mãi</label>
                                    <div class="col-sm-7">
                                        <input type="text" class="form-control double-input large-input" id="ProductDiscount" name="ProductDiscount">
                                        <h6>%</h6>
                                        <span class="input-error-box text-danger"></span>
                                    </div>
                                </div>
                                <!-- SIZE -->
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="ProductSize">Kích Cỡ <span class="text-danger">*</span></label>
                                    <div class="col-sm-7">
                                        <input type="text" class="form-control" id="ProductSize" name="ProductSize">
                                        <span class="input-error-box text-danger"></span>
                                    </div>
                                </div>
                                <!-- SUPPLIER -->
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="ProductSupplierID">Nhà Phân Phối</label>
                                    <div class="col-sm-7">
                                        @if (Model.SupplierList.Any())
                                        {
                                            <select id="ProductSupplierID" name="ProductSupplierID" class="form-control">
                                                @foreach (var supplier in Model.SupplierList)
                                                {
                                                    <option value="@supplier.SupplierID">@supplier.SupplierName</option>
                                                }
                                            </select>
                                        }
                                        else
                                        {
                                            <h6>Chưa có dữ liệu</h6>
                                        }
                                    </div>
                                </div>
                                <!-- PRICE -->
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="ProductPrice">Giá <span class="text-danger">*</span></label>
                                    <div class="col-sm-3">
                                        <input type="text" class="form-control" id="ProductPrice" name="ProductPrice">
                                        <span class="input-error-box text-danger"></span>
                                    </div>
                                    <label class="col-sm-1 control-label" for="ProductUnit">Đơn Vị <span class="text-danger">*</span></label>
                                    <div class="col-sm-3">
                                        <input type="text" class="form-control" id="ProductUnit" name="ProductUnit">
                                        <span class="input-error-box text-danger"></span>
                                    </div>
                                </div>
                                <!-- DESCRIPTION -->
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="ProductDescription">Mô Tả</label>
                                    <div class="col-sm-7">
                                        <textarea class="form-control" id="ProductDescription" name="ProductDescription" style="height: 115px;"></textarea>
                                        <span class="input-error-box text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-lg-4">
                                <div class="form-group">
                                    <label class="control-label" for="ProductDescription">Ảnh Sản Phẩm</label>
                                    <!-- IMAGE -->
                                    <div class="image-box">
                                        <img id="ImageBox" src="~/Content/Image/image_placeholder.jpg" class="image-box" />
                                        <div id="ImagePreviewBox" class="preview-box" style="max-width:80%;"></div>
                                        <input id="ImageUpload" type="file" class="image-file-input" name="ImageUpload" />
                                        <input id="ProductImage" type="hidden" name="ProductImage" />
                                        <h6 id="ImageName" class="image-name"></h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-lg-12">
                                <div class="form-group">
                                    <div class="col-md-12 form-button">
                                        <button class="btn btn-primary" type="button" id="SubmitAddProduct"><i class="glyphicon glyphicon-floppy-disk"></i> Lưu</button>
                                        <button class="btn btn-danger" type="reset"><i class="glyphicon glyphicon-remove"></i> Xóa</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div id='AddColorModal' class='modal fade' data-url='@Url.Action("AddColor", "Administrator")'>
</div>

@section Scripts
{
    <script src="@Url.Content("~/Scripts/Admin/product.js")"></script>
}