
@model _170516.Models.Administrator.CreateShipperModel
@{
    ViewBag.Title = "ViewShipperDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <div class="content-box-large">
            <div class="panel-heading">
                @*nav bar*@
                <ol class="breadcrumb">
                    <li><a href="@Url.Action("ViewShipper","Administrator")">Quản Lý Shipper</a></li>
                    <li class="active">Chi tiết Shipper</li>
                </ol>
                <div class="panel-title title-3">@Model.CompanyName</div>
            </div>
            <div class="panel-body">
                <div class="form-horizontal">
                    <div class="row">
                        <div class="col-md-12 col-lg-12">
                            @Html.HiddenFor(model => model.ShipperID)
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="CompanyName">Tên Shipper <span class="text-danger">*</span></label>
                                <div class="col-sm-7">
                                    <span class="info-box">@Model.CompanyName</span>
                                </div>
                            </div>

                            

                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="Address1">Phone <span class="text-danger">*</span></label>
                                <div class="col-sm-7">
                                    <span class="info-box">@Model.Phone</span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="Address2">EmailAddress <span class="text-danger">*</span></label>
                                <div class="col-sm-7">
                                    <span class="info-box">@Model.EmailAddress</span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="City">Address <span class="text-danger">*</span></label>
                                <div class="col-sm-7">
                                    <span class="info-box">@Model.Address</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="Phone">City <span class="text-danger">*</span></label>
                                <div class="col-sm-7">
                                    <span class="info-box">@Model.City</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="Fax">District <span class="text-danger">*</span></label>
                                <div class="col-sm-7">
                                    <span class="info-box">@Model.District</span>
                                </div>
                            </div>                            
                        </div>
                        
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-lg-12">
                            <div class="form-group">
                                <div class="col-md-12 form-button">
                                    <button class="btn btn-primary" type="button" id="btnUpdateShipperLink"><i class="glyphicon glyphicon-floppy-disk"></i> Chỉnh sửa</button>
                                    <button class="btn btn-danger" type="reset" id="btnDeleteShipper"><i class="glyphicon glyphicon-remove"></i>Xóa</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="@Url.Content("~/Scripts/Admin/shipper.js")"></script>
}
