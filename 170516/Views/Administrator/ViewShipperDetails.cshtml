
@model _170516.Models.Administrator.CreateShipperModel
@{
    ViewBag.Title = "Chi tiết đơn vị vận chuyển";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="main-content-wrapper">
            <div class="panel-heading">
                @*nav bar*@
                <ol class="breadcrumb">
                    <li><a href="@Url.Action("ViewShipper","Administrator")">Quản lý đơn vị vận chuyển</a></li>
                    <li class="active">Chi tiết đơn vị vận chuyển</li>
                </ol>
                <div class="container-fluid admin-header">
                    <div class="title col-md-6 col-xs-6"><h3>@Model.CompanyName</h3></div>
                </div>
            </div>
            <div class="container-fluid">
                <div class="form-horizontal">
                    <div class="row">
                        <div class="col-md-12 col-lg-12 detail-view">
                            @Html.HiddenFor(model => model.ShipperID)
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="CompanyName">Tên công ty <span class="text-danger">*</span></label>
                                <div class="col-sm-7">
                                    <p class="info-box">@Model.CompanyName</p>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="Address1">Điện thoại <span class="text-danger">*</span></label>
                                <div class="col-sm-7">
                                    <p class="info-box">@Model.Phone</p>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="Address2">Địa chỉ Email <span class="text-danger">*</span></label>
                                <div class="col-sm-7">
                                    <p class="info-box">@Model.EmailAddress</p>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="City">Địa chỉ <span class="text-danger">*</span></label>
                                <div class="col-sm-7">
                                    <p class="info-box">@Model.Address</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="Phone">Tỉnh/Thành phố <span class="text-danger">*</span></label>
                                <div class="col-sm-7">
                                    <p class="info-box">@Model.City</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="Fax">Quận <span class="text-danger">*</span></label>
                                <div class="col-sm-7">
                                    <p class="info-box">@Model.District</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="@Url.Content("~/Scripts/Admin/shipper.js")"></script>
}
