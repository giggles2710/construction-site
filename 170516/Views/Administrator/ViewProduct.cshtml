@model _170516.Models.Administrator.ViewProductModel
@{
    ViewBag.Title = "Quản lý sản phẩm";
}

<div class="container">

    <div class="row">
        <div class="col-sm-12">
            <div class="btn-group pull-right m-t-5 m-b-20">
                <a href="@Url.Action("AddProduct","Administrator")" class="btn btn-custom dropdown-toggle waves-effect waves-light">Thêm sản phẩm <span class="m-l-5"><i class="fa fa-plus"></i></span></a>
            </div>
            <h4 class="page-title">Quản lý sản phẩm</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="card-box table-responsive">
                <h4 class="header-title m-t-0 m-b-30">Danh sách sản phẩm</h4>

                <div class="data-table-wrapper form-inline dt-bootstrap no-footer">
                    @if (Model.Products.Any())
                    {
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="filter-wrapper">
                                    <label>
                                        Hiển thị <select id="dataTables_showNumberSelect" aria-controls="dataTables-example" class="form-control input-sm">
                                            @if (Model.ItemOnPage == 10)
                                            {
                                                <option value="10" selected>10</option>
                                            }
                                            else
                                            {
                                                <option value="10">10</option>
                                            }
                                            @if (Model.ItemOnPage == 25)
                                            {
                                                <option value="25" selected>25</option>
                                            }
                                            else
                                            {
                                                <option value="25">25</option>
                                            }
                                            @if (Model.ItemOnPage == 50)
                                            {
                                                <option value="50" selected>50</option>
                                            }
                                            else
                                            {
                                                <option value="50">50</option>
                                            }
                                            @if (Model.ItemOnPage == 100)
                                            {
                                                <option value="100" selected>100</option>
                                            }
                                            else
                                            {
                                                <option value="100">100</option>
                                            }
                                        </select>
                                    </label>
                                </div>
                            </div><div class="col-sm-6">
                                <div class="search-wrapper">
                                    @if (string.IsNullOrWhiteSpace(Model.SearchText))
                                    {
                                        <label><button type="button" id="dataTables_search" class="btn btn-default btn-sm"><i class="fa fa-search"></i></button> <input type="search" id="dataTables_show_item_search" class="form-control input-sm" placeholder="" aria-controls="datatable-fixed-header"></label>
                                    }
                                    else
                                    {
                                        <label><button type="button" id="dataTables_search" class="btn btn-default btn-sm"><i class="fa fa-search"></i></button> <input type="search" id="dataTables_show_item_search" value="@Model.SearchText" class="form-control input-sm" placeholder="" aria-controls="datatable-fixed-header"></label>
                                    }                                    
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="table-wrapper">
                                    <table class="table table-striped dt-responsive nowrap no-footer dtr-inline" role="grid">
                                        <tbody>
                                            @for (var i = 1; i <= Model.Products.Count; i++)
                                            {
                                                <tr class="odd" role="row">
                                                    <td>@i</td>
                                                    <td>@Model.Products[i - 1].ProductName</td>
                                                    <td>@Model.Products[i - 1].CategoryName</td>
                                                    <td>@Model.Products[i - 1].QuantityInStock</td>
                                                    <td>@Model.Products[i - 1].DateModified.ToString("dd/MM/yyyy hh:mm")</td>
                                                    <td>@Model.Products[i - 1].ModifiedUser</td>
                                                    <td style="text-align:center; width: 7%;">
                                                        <a class="action-link detail-link" title="Chi tiết" href="@Url.Action("ViewProductDetail", "Administrator", new { id = Model.Products[i - 1].ProductID })"><i class="fa fa-info"></i></a>
                                                        <a class="action-link update-link" title="Cập nhật" href="@Url.Action("UpdateProduct", "Administrator", new { id = Model.Products[i - 1].ProductID })"><i class="fa fa-pencil"></i></a>
                                                        <a class="action-link remove-link product" title="Xóa" href="#" data-url="@Url.Action("RemoveProduct", "Administrator", new { id = Model.Products[i - 1].ProductID })"><i class="fa fa-remove"></i></a>
                                                    </td>
                                                </tr>
                                            }

                                            @if (Model.Products.Count < Model.ItemOnPage)
                                            {
                                                for (var i = Model.Products.Count + 1; i <= Model.ItemOnPage; i++)
                                                {
                                                    <tr class="odd" role="row">
                                                        <td>@i</td>
                                                        <td></td>
                                                        <td></td>
                                                        <td></td>
                                                        <td></td>
                                                        <td></td>
                                                        <td></td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                        <thead>
                                            <tr role="row">
                                                <th class="center" tabindex="0" rowspan="1" colspan="1">#</th>
                                                @if (Model.SortField.Equals("ProductName"))
                                                {
                                                    if (Model.IsAsc)
                                                    {
                                                        <th class="center" tabindex="0" rowspan="1" data-sort="ProductName" data-direction="desc" colspan="1">Tên <i class="fa fa-fw fa-sort-asc"></i></th>
                                                    }
                                                    else
                                                    {
                                                        <th class="center" tabindex="0" rowspan="1" data-sort="ProductName" data-direction="asc" colspan="1">Tên <i class="fa fa-fw fa-sort-desc"></i></th>
                                                    }
                                                }
                                                else
                                                {
                                                    <th class="center" tabindex="0" rowspan="1" data-sort="ProductName" data-direction="desc" colspan="1">Tên <i class="fa fa-fw fa-sort-asc"></i></th>
                                                }
                                                @if (Model.SortField.Equals("CategoryName"))
                                                {
                                                    if (Model.IsAsc)
                                                    {
                                                        <th class="center" tabindex="0" rowspan="1" data-sort="CategoryName" data-direction="desc" colspan="1">Tên danh mục <i class="fa fa-fw fa-sort-asc"></i></th>
                                                    }
                                                    else
                                                    {
                                                        <th class="center" tabindex="0" rowspan="1" data-sort="CategoryName" data-direction="asc" colspan="1">Tên danh mục <i class="fa fa-fw fa-sort-desc"></i></th>
                                                    }
                                                }
                                                else
                                                {
                                                    <th class="center" tabindex="0" rowspan="1" data-sort="CategoryName" data-direction="desc" colspan="1">Tên danh mục <i class="fa fa-fw fa-sort-asc"></i></th>
                                                }
                                                @if (Model.SortField.Equals("QuantityInStock"))
                                                {
                                                    if (Model.IsAsc)
                                                    {
                                                        <th class="center" tabindex="0" rowspan="1" data-sort="QuantityInStock" data-direction="desc" colspan="1">Số lượng <i class="fa fa-fw fa-sort-asc"></i></th>
                                                    }
                                                    else
                                                    {
                                                        <th class="center" tabindex="0" rowspan="1" data-sort="QuantityInStock" data-direction="asc" colspan="1">Số lượng <i class="fa fa-fw fa-sort-desc"></i></th>
                                                    }
                                                }
                                                else
                                                {
                                                    <th class="center" tabindex="0" rowspan="1" data-sort="QuantityInStock" data-direction="desc" colspan="1">Số lượng <i class="fa fa-fw fa-sort-asc"></i></th>
                                                }
                                                @if (Model.SortField.Equals("DateModified"))
                                                {
                                                    if (Model.IsAsc)
                                                    {
                                                        <th class="center" tabindex="0" rowspan="1" data-sort="DateModified" data-direction="desc" colspan="1">Ngày cập nhật <i class="fa fa-fw fa-sort-asc"></i></th>
                                                    }
                                                    else
                                                    {
                                                        <th class="center" tabindex="0" rowspan="1" data-sort="DateModified" data-direction="asc" colspan="1">Ngày cập nhật <i class="fa fa-fw fa-sort-desc"></i></th>
                                                    }
                                                }
                                                else
                                                {
                                                    <th class="center" tabindex="0" rowspan="1" data-sort="DateModified" data-direction="desc" colspan="1">Ngày cập nhật <i class="fa fa-fw fa-sort-asc"></i></th>
                                                }
                                                @if (Model.SortField.Equals("ModifiedUser"))
                                                {
                                                    if (Model.IsAsc)
                                                    {
                                                        <th class="center" tabindex="0" rowspan="1" data-sort="ModifiedUser" data-direction="desc" colspan="1">Người cập nhật <i class="fa fa-fw fa-sort-asc"></i></th>
                                                    }
                                                    else
                                                    {
                                                        <th class="center" tabindex="0" rowspan="1" data-sort="ModifiedUser" data-direction="asc" colspan="1">Người cập nhật <i class="fa fa-fw fa-sort-desc"></i></th>
                                                    }
                                                }
                                                else
                                                {
                                                    <th class="center" tabindex="0" rowspan="1" data-sort="ModifiedUser" data-direction="desc" colspan="1">Người cập nhật <i class="fa fa-fw fa-sort-asc"></i></th>
                                                }
                                                <th class="center" tabindex="0" rowspan="1" colspan="1"></th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="summary-status" role="status" aria-live="polite">Đang hiển thị record @Model.StartIndex tới @Model.EndIndex trong @Model.TotalNumber records</div>
                            </div>
                            <div class="col-sm-6">
                                <div class="pagination-wrapper">
                                    <ul class="pagination">
                                        @if (Model.CurrentPage == 1)
                                        {
                                            <li class="paginate_button previous disabled" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_previous">
                                                <a href="#">Trước</a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="paginate_button previous" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_previous">
                                                <a href="@Url.Action("ViewProduct", "Administrator", new {page = Model.CurrentPage - 1, itemsPerPage = Model.ItemOnPage, searchText = Model.SearchText, sortField = Model.SortField, isAsc = Model.IsAsc})">Trước</a>
                                            </li>
                                        }

                                        @for (var i = 0; i < 5; i++)
                                        {
                                            if ((Model.CurrentPage + i) <= Model.TotalPage)
                                            {
                                                if (i == 0)
                                                {
                                                    <li class="paginate_button active" aria-controls="dataTables-example" tabindex="0">
                                                        <a href="@Url.Action("ViewProduct", "Administrator", new {page = Model.CurrentPage + i, itemsPerPage = Model.ItemOnPage, searchText = Model.SearchText, sortField = Model.SortField, isAsc = Model.IsAsc})">@((Model.CurrentPage + i).ToString())</a>
                                                    </li>
                                                }
                                                else
                                                {
                                                    <li class="paginate_button" aria-controls="dataTables-example" tabindex="0">
                                                        <a href="@Url.Action("ViewProduct", "Administrator", new { page = Model.CurrentPage + i, itemsPerPage = Model.ItemOnPage, searchText = Model.SearchText, sortField = Model.SortField, isAsc = Model.IsAsc })">@((Model.CurrentPage + i).ToString())</a>
                                                    </li>
                                                }
                                            }
                                        }

                                        @if (Model.CurrentPage == Model.TotalPage)
                                        {
                                            <li class="paginate_button next disabled" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_next">
                                                <a href="#">Sau</a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="paginate_button next" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_next">
                                                <a href="@Url.Action("ViewProduct", "Administrator", new {page = Model.CurrentPage + 1, itemsPerPage = Model.ItemOnPage, searchText = Model.SearchText, sortField = Model.SortField, isAsc = Model.IsAsc})">Sau</a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <h5>Không có sản phẩm nào được lưu trong cơ sở dữ liệu. Vui lòng tạo sản phẩm mới tại <a href="@Url.Action("AddProduct", "Administrator")">đây</a></h5>
                    }

                </div>
            </div>
        </div><!-- end col -->
    </div>
</div>

@section Scripts
{
    <script src="@Url.Content("~/Scripts/Admin/product.js")"></script>
}
