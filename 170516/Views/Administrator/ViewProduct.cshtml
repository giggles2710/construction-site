@model _170516.Models.Administrator.ViewProductModel

@{
    ViewBag.Title = "Quản lý sản phẩm";
}

<div class="row">
    <div class="col-md-12">
        <div class="content-box-large">
            <div class="panel-heading">
                <ol class="breadcrumb">
                    <li class="active">Quản Lý Sản Phẩm</li>
                </ol>
                <div class="panel-title title-3">Danh Sách Sản Phẩm</div>
                <div class="panel-options">
                    <a id="addBtn" href="@Url.Action("AddProduct", "Administrator")" class="btn btn-primary btn-xs" style="margin-top:0px;"><i class="glyphicon glyphicon-plus"></i> Thêm</a>
                </div>
            </div>
            <div class="panel-body">
                @if (Model.Products.Any())
                {
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="dataTables_show_item_div">
                                <label>
                                    <span>Hiển thị</span>
                                    <select id="showNumberSelect" aria-controls="dataTables-example" class="form-control input-sm">
                                        @if (Model.ItemOnPage == 10)
                                        {
                                            <option value="10" selected>10</option>
                                        }
                                        else
                                        {
                                            <option value="10">10</option>
                                        }

                                        @if (Model.ItemOnPage == 25)
                                        {
                                            <option value="25" selected>25</option>
                                        }
                                        else
                                        {
                                            <option value="25">25</option>
                                        }

                                        @if (Model.ItemOnPage == 50)
                                        {
                                            <option value="50" selected>50</option>
                                        }
                                        else
                                        {
                                            <option value="50">50</option>
                                        }

                                        @if (Model.ItemOnPage == 100)
                                        {
                                            <option value="100" selected>100</option>
                                        }
                                        else
                                        {
                                            <option value="100">100</option>
                                        }
                                    </select>
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div id="dataTables_show_item_search" class="dataTables_search_div">
                                <label>Tìm</label>
                                <input type="search" class="form-control input-sm" value="@Model.SearchText">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <table width="100%" class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info" style="width: 100%;">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 174px;">Tên</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 211px;">Danh Mục</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 193px;">Số Lượng</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending" style="width: 151px;">Ngày Cập Nhật</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 111px;">Người Cập Nhật</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 111px;"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model.Products)
                                    {
                                        <tr class="gradeA odd" role="row">
                                            <td class="sorting_1">@product.ProductName</td>
                                            <td>@product.CategoryName</td>
                                            <td>@product.QuantityInStock</td>
                                            <td class="center">@product.DateModified.ToString("dd/MM/yyyy hh:mm")</td>
                                            <td class="center">@product.ModifiedUser</td>
                                            <td class="center">
                                                <a href="@Url.Action("ViewProduct","Administrator",new {id = product.ProductID})"><i class="glyphicon glyphicon-search"></i></a>
                                                <a href="@Url.Action("UpdateProduct","Administrator",new {id = product.ProductID})"><i class="glyphicon glyphicon-pencil"></i></a>
                                                <a href="@Url.Action("RemoveProduct","Administrator",new {id = product.ProductID})"><i class="glyphicon glyphicon-remove"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="dataTables_info" role="status" aria-live="polite">Hiển thị từ @Model.StartIndex tới @Model.EndIndex trong @Model.TotalNumber sản phẩm</div>
                        </div>
                        <div class="col-sm-6">
                            <div class="dataTables_paginate">
                                <ul class="pagination">
                                    <li class="paginate_button previous disabled" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_previous"><a href="#">Trước</a></li>
                                    @for (var i = 0; i < 5; i++)
                                    {
                                        if (i == 0)
                                        {
                                            <li class="paginate_button active" aria-controls="dataTables-example" tabindex="0"><a href="#">@((Model.CurrentPage + i).ToString())</a></li>
                                        }
                                        else
                                        {
                                            <li class="paginate_button" aria-controls="dataTables-example" tabindex="0"><a href="#">@((Model.CurrentPage + i).ToString())</a></li>
                                        }
                                    }
                                    <li class="paginate_button next" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_next"><a href="#">Sau</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="well well-lg">
                        Look, I'm in a large well!
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="@Url.Content("~/Scripts/Admin/product.js")"></script>
}

