@model _170516.Models.Administrator.ViewShipperModel
@{
    ViewBag.Title = "ViewShipper";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <div class="content-box-large">
            <div class="panel-heading">
                <ol class="breadcrumb">
                    <li class="active">Quản Lý Shipper</li>
                </ol>
                <div class="panel-title title-3">Danh Sách Shipper</div>
                <div class="panel-options">
                    <a id="addBtn" href="@Url.Action("AddShipper", "Administrator")" class="btn btn-primary btn-xs" style="margin-top:0px;"><i class="glyphicon glyphicon-plus"></i> Thêm</a>
                </div>
            </div>
            <div class="panel-body">
                @if (Model.Shippers.Any())
            {
                    <div class="row">
                        <div class="col-sm-6">
                            <input type="hidden" id="dataTables_sort_field_hidden" value="@Model.SortField" />
                            <input type="hidden" id="dataTables_sort_direction_hidden" value="@Model.IsAsc" />
                            <div class="dataTables_show_item_div form-inline">
                                <label><span>Hiển thị</span></label>
                                <select id="dataTables_showNumberSelectShipper" aria-controls="dataTables-example" class="form-control input-sm">
                                    @if (Model.ItemOnPage == 10)
                                    {
                                        <option value="10" selected>10</option>
                                    }
                                    else
                                    {
                                        <option value="10">10</option>
                                    }
                                    @if (Model.ItemOnPage == 25)
                                    {
                                        <option value="25" selected>25</option>
                                    }
                                    else
                                    {
                                        <option value="25">25</option>
                                    }
                                    @if (Model.ItemOnPage == 50)
                                    {
                                        <option value="50" selected>50</option>
                                    }
                                    else
                                    {
                                        <option value="50">50</option>
                                    }
                                    @if (Model.ItemOnPage == 100)
                                    {
                                        <option value="100" selected>100</option>
                                    }
                                    else
                                    {
                                        <option value="100">100</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div id="dataTables_show_item_search" class="dataTables_search_div form-inline">
                                @if (!string.IsNullOrEmpty(Model.SearchText) && Model.SearchText.Equals("NULL"))
                                {
                                    <input type="search" class="form-control input-sm" value="">
                                }
                                else
                                {
                                    <input type="search" class="form-control input-sm" value="@Model.SearchText">
                                }
                                <button type="button" id="dataTables_searchShipper" class="btn btn-default btn-sm"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12 dataTable_grid">
                            <table class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline" id="dataTable_shipper" role="grid" aria-describedby="dataTables-example_info" style="width: 100%;">
                                <thead>
                                    <tr role="row">
                                        <th class="center" tabindex="0" rowspan="1" colspan="1">#</th>
                                        @if (Model.SortField.Equals("CompanyName"))
                                        {
                                            if (Model.IsAsc)
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="CompanyName" data-direction="desc" colspan="1">Tên công ty<i class="fa fa-fw fa-sort-asc"></i></th>
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="CompanyName" data-direction="asc" colspan="1">Tên công ty <i class="fa fa-fw fa-sort-desc"></i></th>
                                            }
                                        }
                                        else
                                        {
                                            <th class="center" tabindex="0" rowspan="1" data-sort="CompanyName" data-direction="asc" colspan="1">Tên công ty <i class="fa fa-fw fa-sort-asc"></i></th>
                                        }
                                        @if (Model.SortField.Equals("Phone"))
                                        {
                                            if (Model.IsAsc)
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="Phone" data-direction="desc" colspan="1">Phone <i class="fa fa-fw fa-sort-asc"></i></th>
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="Phone" data-direction="asc" colspan="1">Phone <i class="fa fa-fw fa-sort-desc"></i></th>
                                            }
                                        }
                                        else
                                        {
                                            <th class="center" tabindex="0" rowspan="1" data-sort="Phone" data-direction="asc" colspan="1">Phone <i class="fa fa-fw fa-sort-asc"></i></th>
                                        }

                                        @if (Model.SortField.Equals("EmailAddress"))
                                        {
                                            if (Model.IsAsc)
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="EmailAddress" data-direction="desc" colspan="1">Email Addresss <i class="fa fa-fw fa-sort-asc"></i></th>
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="EmailAddress" data-direction="asc" colspan="1">Email Addresss <i class="fa fa-fw fa-sort-desc"></i></th>
                                            }
                                        }
                                        else
                                        {
                                            <th class="center" tabindex="0" rowspan="1" data-sort="EmailAddress" data-direction="asc" colspan="1">Email Addresss <i class="fa fa-fw fa-sort-asc"></i></th>
                                        }
                                        @if (Model.SortField.Equals("Address"))
                                        {
                                            if (Model.IsAsc)
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="Address" data-direction="desc" colspan="1">Địa chỉ <i class="fa fa-fw fa-sort-asc"></i></th>
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="Address" data-direction="asc" colspan="1">Địa chỉ <i class="fa fa-fw fa-sort-desc"></i></th>
                                            }
                                        }
                                        else
                                        {
                                            <th class="center" tabindex="0" rowspan="1" data-sort="Address" data-direction="asc" colspan="1">Địa chỉ<i class="fa fa-fw fa-sort-asc"></i></th>
                                        }

                                        @if (Model.SortField.Equals("City"))
                                        {
                                            if (Model.IsAsc)
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="City" data-direction="desc" colspan="1">Huyện/Phường <i class="fa fa-fw fa-sort-asc"></i></th>
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="City" data-direction="asc" colspan="1">Huyện/Phường <i class="fa fa-fw fa-sort-desc"></i></th>
                                            }
                                        }
                                        else
                                        {
                                            <th class="center" tabindex="0" rowspan="1" data-sort="City" data-direction="asc" colspan="1">Huyện/Phường<i class="fa fa-fw fa-sort-asc"></i></th>
                                        }
                                        @if (Model.SortField.Equals("District"))
                                        {
                                            if (Model.IsAsc)
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="District" data-direction="desc" colspan="1">District <i class="fa fa-fw fa-sort-asc"></i></th>
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="District" data-direction="asc" colspan="1">District <i class="fa fa-fw fa-sort-desc"></i></th>
                                            }
                                        }
                                        else
                                        {
                                            <th class="center" tabindex="0" rowspan="1" data-sort="Address" data-direction="asc" colspan="1">Địa chỉ<i class="fa fa-fw fa-sort-asc"></i></th>
                                        }
                                        <th class="center" tabindex="0" rowspan="1" colspan="1"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (var i = 1; i <= Model.Shippers.Count; i++)
                                    {
                                        <tr class="gradeA odd" role="row">
                                            <td>@i</td>
                                            <td>@Model.Shippers[i - 1].CompanyName</td>
                                            <td>@Model.Shippers[i - 1].Phone</td>
                                            <td>@Model.Shippers[i - 1].EmailAddress</td>
                                            <td>@Model.Shippers[i - 1].Address</td>
                                            <td>@Model.Shippers[i - 1].City</td>
                                            <td>@Model.Shippers[i - 1].District</td>                                            
                                            <td>
                                                <a class="action-link detail-link" title="Chi tiết" href="@Url.Action("ViewShipperDetails", "Administrator", new { id = Model.Shippers[i - 1].ShipperID })"><i class="fa fa-info-circle"></i></a>
                                                <a class="action-link update-link" title="Cập nhật" href="@Url.Action("UpdateShipper", "Administrator", new { id = Model.Shippers[i - 1].ShipperID })"><i class="fa fa-pencil"></i></a>
                                                <a class="action-link remove-link shipper" title="Xóa" href="#" data-url="@Url.Action("RemoveShipper", "Administrator", new { id = Model.Shippers[i - 1].ShipperID })"><i class="fa fa-remove"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            @if (Model.EndIndex > Model.TotalNumber)
                            {
                                <div class="dataTables_info" role="status" aria-live="polite">Hiển thị từ @Model.StartIndex tới @Model.TotalNumber trong @Model.TotalNumber shipper</div>
                            }
                            else
                            {
                                <div class="dataTables_info" role="status" aria-live="polite">Hiển thị từ @Model.StartIndex tới @Model.EndIndex trong @Model.TotalNumber shipper</div>
                            }                                 
                        </div>
                        <div class="col-sm-6">
                            <div class="dataTables_paginate">
                                <ul class="pagination">
                                    @if (Model.CurrentPage == 1)
                                    {
                                        <li class="paginate_button previous disabled" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_previous">
                                            <a href="#">Trước</a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="paginate_button previous" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_previous">
                                            <a href="@Url.Action("ViewShipper", "Administrator", new {page = Model.CurrentPage - 1, itemsPerPage = Model.ItemOnPage, searchText = Model.SearchText, sortField = Model.SortField, isAsc = Model.IsAsc})">Trước</a>
                                        </li>
                                    }

                                    @for (var i = 0; i < 5; i++)
                                    {
                                        if ((Model.CurrentPage + i) <= Model.TotalPage)
                                        {
                                            if (i == 0)
                                            {
                                                <li class="paginate_button active" aria-controls="dataTables-example" tabindex="0">
                                                    <a href="@Url.Action("ViewShipper", "Administrator", new {page = Model.CurrentPage + i, itemsPerPage = Model.ItemOnPage, searchText = Model.SearchText, sortField = Model.SortField, isAsc = Model.IsAsc})">@((Model.CurrentPage + i).ToString())</a>
                                                </li>
                                            }
                                            else
                                            {
                                                <li class="paginate_button" aria-controls="dataTables-example" tabindex="0">
                                                    <a href="@Url.Action("ViewShipper", "Administrator", new { page = Model.CurrentPage + i, itemsPerPage = Model.ItemOnPage, searchText = Model.SearchText, sortField = Model.SortField, isAsc = Model.IsAsc })">@((Model.CurrentPage + i).ToString())</a>
                                                </li>
                                            }
                                        }
                                    }

                                    @if (Model.CurrentPage == Model.TotalPage)
                                    {
                                        <li class="paginate_button next disabled" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_next">
                                            <a href="#">Sau</a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="paginate_button next" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_next">
                                            <a href="@Url.Action("ViewShipper", "Administrator", new {page = Model.CurrentPage + 1, itemsPerPage = Model.ItemOnPage, searchText = Model.SearchText, sortField = Model.SortField, isAsc = Model.IsAsc})">Sau</a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <h5>Không có shipper nào được lưu trong cơ sở dữ liệu. Vui lòng tạo shipper tại <a href="@Url.Action("AddShipper", "Administrator")">đây</a></h5>
                }
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    <script src="@Url.Content("~/Scripts/Admin/shipper.js")"></script>
}
