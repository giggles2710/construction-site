@model _170516.Models.Administrator.ViewOrderDetailsModel
@{
    ViewBag.Title = "ViewOrderDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="row">
    <div class="col-md-12">
        <div class="content-box-large">
            <div class="panel-heading">
                <ol class="breadcrumb">
                    <li class="active">
                        <a href="@Url.Action("ViewOrder", "Administrator")">Quản Lý Đơn hàng</a>
                    </li>
                </ol>
                <div class="panel-title title-3">Danh Sách chi tiết Đơn hàng</div>
            </div>
            <div class="panel-body">
                @if (Model.OrderDetails.Any())
            {
                    <div class="row">
                        <div class="col-sm-6">
                            <input type="hidden" id="dataTables_sort_field_hidden" value="@Model.SortField" />
                            <input type="hidden" id="dataTables_sort_direction_hidden" value="@Model.IsAsc" />
                            @Html.HiddenFor(model => model.OrderID)
                            <div class="dataTables_show_item_div form-inline">
                                <label><span>Hiển thị</span></label>
                                <select id="dataTables_showNumberSelectOrderDetails" aria-controls="dataTables-example" class="form-control input-sm">
                                    @if (Model.ItemOnPage == 10)
                                    {
                                        <option value="10" selected>10</option>
                                    }
                                    else
                                    {
                                        <option value="10">10</option>
                                    }
                                    @if (Model.ItemOnPage == 25)
                                    {
                                        <option value="25" selected>25</option>
                                    }
                                    else
                                    {
                                        <option value="25">25</option>
                                    }
                                    @if (Model.ItemOnPage == 50)
                                    {
                                        <option value="50" selected>50</option>
                                    }
                                    else
                                    {
                                        <option value="50">50</option>
                                    }
                                    @if (Model.ItemOnPage == 100)
                                    {
                                        <option value="100" selected>100</option>
                                    }
                                    else
                                    {
                                        <option value="100">100</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div id="dataTables_show_item_search" class="dataTables_search_div form-inline">
                                @if (!string.IsNullOrEmpty(Model.SearchText) && Model.SearchText.Equals("NULL"))
                                {
                                    <input type="search" class="form-control input-sm" value="">
                                }
                                else
                                {
                                    <input type="search" class="form-control input-sm" value="@Model.SearchText">
                                }
                                <button type="button" id="dataTables_searchOrderDetails" class="btn btn-default btn-sm"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12 dataTable_grid">
                            <table class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline" id="dataTable_orderDetails" role="grid" aria-describedby="dataTables-example_info" style="width: 100%;">
                                <thead>
                                    <tr role="row">
                                        <th class="center" tabindex="0" rowspan="1" colspan="1">#</th>
                                        @if (Model.SortField.Equals("OrderID"))
                                        {
                                            if (Model.IsAsc)
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="OrderID" data-direction="desc" colspan="1">Order ID<i class="fa fa-fw fa-sort-asc"></i></th>
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="OrderID" data-direction="asc" colspan="1">Order ID <i class="fa fa-fw fa-sort-desc"></i></th>
                                            }
                                        }
                                        else
                                        {
                                            <th class="center" tabindex="0" rowspan="1" data-sort="OrderID" data-direction="asc" colspan="1">Order ID <i class="fa fa-fw fa-sort-asc"></i></th>
                                        }
                                        @if (Model.SortField.Equals("ProductName"))
                                        {
                                            if (Model.IsAsc)
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="ProductName" data-direction="desc" colspan="1">Tên sản phẩm <i class="fa fa-fw fa-sort-asc"></i></th>
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="ProductName" data-direction="asc" colspan="1">Tên sản phẩm <i class="fa fa-fw fa-sort-desc"></i></th>
                                            }
                                        }
                                        else
                                        {
                                            <th class="center" tabindex="0" rowspan="1" data-sort="ProductName" data-direction="asc" colspan="1">Tên sản phẩm<i class="fa fa-fw fa-sort-asc"></i></th>
                                        }

                                        @if (Model.SortField.Equals("Price"))
                                        {
                                            if (Model.IsAsc)
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="Price" data-direction="desc" colspan="1">Giá <i class="fa fa-fw fa-sort-asc"></i></th>
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="Price" data-direction="asc" colspan="1">Giá<i class="fa fa-fw fa-sort-desc"></i></th>
                                            }
                                        }
                                        else
                                        {
                                            <th class="center" tabindex="0" rowspan="1" data-sort="Price" data-direction="asc" colspan="1">Giá<i class="fa fa-fw fa-sort-asc"></i></th>
                                        }
                                        @if (Model.SortField.Equals("Quantity"))
                                        {
                                            if (Model.IsAsc)
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="Quantity" data-direction="desc" colspan="1">Số lượng <i class="fa fa-fw fa-sort-asc"></i></th>
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="Quantity" data-direction="asc" colspan="1">Số lượng<i class="fa fa-fw fa-sort-desc"></i></th>
                                            }
                                        }
                                        else
                                        {
                                            <th class="center" tabindex="0" rowspan="1" data-sort="Quantity" data-direction="asc" colspan="1">Số lượng<i class="fa fa-fw fa-sort-asc"></i></th>
                                        }

                                        @if (Model.SortField.Equals("Discount"))
                                        {
                                            if (Model.IsAsc)
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="Discount" data-direction="desc" colspan="1">Giảm giá <i class="fa fa-fw fa-sort-asc"></i></th>
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="Discount" data-direction="asc" colspan="1">Giảm giá <i class="fa fa-fw fa-sort-desc"></i></th>
                                            }
                                        }
                                        else
                                        {
                                            <th class="center" tabindex="0" rowspan="1" data-sort="Discount" data-direction="asc" colspan="1">Giảm giá <i class="fa fa-fw fa-sort-asc"></i></th>
                                        }

                                        @if (Model.SortField.Equals("Size"))
                                        {
                                            if (Model.IsAsc)
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="Size" data-direction="desc" colspan="1">Size <i class="fa fa-fw fa-sort-asc"></i></th>
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="Size" data-direction="asc" colspan="1">Size<i class="fa fa-fw fa-sort-desc"></i></th>
                                            }
                                        }
                                        else
                                        {
                                            <th class="center" tabindex="0" rowspan="1" data-sort="Size" data-direction="asc" colspan="1">Size<i class="fa fa-fw fa-sort-asc"></i></th>
                                        }
                                        @if (Model.SortField.Equals("Total"))
                                        {
                                            if (Model.IsAsc)
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="Total" data-direction="desc" colspan="1">Tổng <i class="fa fa-fw fa-sort-asc"></i></th>
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="Total" data-direction="asc" colspan="1">Tổng<i class="fa fa-fw fa-sort-desc"></i></th>
                                            }
                                        }
                                        else
                                        {
                                            <th class="center" tabindex="0" rowspan="1" data-sort="Total" data-direction="asc" colspan="1">Tổng<i class="fa fa-fw fa-sort-asc"></i></th>
                                        }
                                        @if (Model.SortField.Equals("IsFulfilled"))
                                        {
                                            if (Model.IsAsc)
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="IsFulfilled" data-direction="desc" colspan="1">Trạng thái <i class="fa fa-fw fa-sort-asc"></i></th>
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="IsFulfilled" data-direction="asc" colspan="1">Trạng thái<i class="fa fa-fw fa-sort-desc"></i></th>
                                            }
                                        }
                                        else
                                        {
                                            <th class="center" tabindex="0" rowspan="1" data-sort="IsFulfilled" data-direction="asc" colspan="1">Trạng thái<i class="fa fa-fw fa-sort-asc"></i></th>
                                        }
                                        @if (Model.SortField.Equals("PaymentDate"))
                                        {
                                            if (Model.IsAsc)
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="PaymentDate" data-direction="desc" colspan="1">Ngày trả tiền <i class="fa fa-fw fa-sort-asc"></i></th>
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="PaymentDate" data-direction="asc" colspan="1">Ngày trả tiền<i class="fa fa-fw fa-sort-desc"></i></th>
                                            }
                                        }
                                        else
                                        {
                                            <th class="center" tabindex="0" rowspan="1" data-sort="PaymentDate" data-direction="asc" colspan="1">Ngày trả tiền<i class="fa fa-fw fa-sort-asc"></i></th>
                                        }                           
                                        @if (Model.SortField.Equals("ShipDate"))
                                        {
                                            if (Model.IsAsc)
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="ShipDate" data-direction="desc" colspan="1">Ngày ship <i class="fa fa-fw fa-sort-asc"></i></th>
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="ShipDate" data-direction="asc" colspan="1">Ngày ship<i class="fa fa-fw fa-sort-desc"></i></th>
                                            }
                                        }
                                        else
                                        {
                                            <th class="center" tabindex="0" rowspan="1" data-sort="ShipDate" data-direction="asc" colspan="1">Ngày ship<i class="fa fa-fw fa-sort-asc"></i></th>
                                        }                                        
                                        <th class="center" tabindex="0" rowspan="1" colspan="1"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (var i = 1; i <= Model.OrderDetails.Count; i++)
                                    {
                                        <tr class="gradeA odd" role="row">
                                            <td>@i</td>
                                            <td>@Model.OrderDetails[i - 1].OrderID</td>
                                            <td>@Model.OrderDetails[i - 1].ProductName</td>
                                            <td>@Model.OrderDetails[i - 1].Price</td>
                                            <td>@Model.OrderDetails[i - 1].Quantity</td>
                                            <td>@Model.OrderDetails[i - 1].Discount</td>
                                            <td>@Model.OrderDetails[i - 1].Size</td>
                                            <td>@Model.OrderDetails[i - 1].Total</td>
                                            <td>
                                                @if (Model.OrderDetails[i - 1].IsFulfilled)
                                                {
                                                    <span>Đã xong</span>
                                                }
                                                else
                                                {
                                                    <span>Chưa giao</span>
                                                }
                                            </td>
                                            <td>
                                            @if (Model.OrderDetails[i - 1].PaidDate != null)
                                            { 
                                                <span>@Model.OrderDetails[i - 1].PaidDate.Value.ToString("dd/MM/yyyy")</span>
                                            }
                                            </td>
                                            <td>
                                            @if (Model.OrderDetails[i - 1].ShipDate != null)
                                            {
                                                <span>@Model.OrderDetails[i - 1].ShipDate.Value.ToString("dd/MM/yyyy")</span>
                                            }                                                
                                            </td>
                                            <td>
                                                <a class="action-link remove-link orderDetails" title="Hủy sản phẩm" href="#" data-url="@Url.Action("CancelOrderProduct", "Administrator", new { id = Model.OrderDetails[i - 1].OrderDetailID })"><i class="fa fa-remove"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="dataTables_info" role="status" aria-live="polite">Hiển thị từ @Model.StartIndex tới @Model.EndIndex trong @Model.TotalNumber sản phẩm</div>
                        </div>
                        <div class="col-sm-6">
                            <div class="dataTables_paginate">
                                <ul class="pagination">
                                    @if (Model.CurrentPage == 1)
                                    {
                                        <li class="paginate_button previous disabled" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_previous">
                                            <a href="#">Trước</a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="paginate_button previous" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_previous">
                                            <a href="@Url.Action("ViewOrderDetails", "Administrator", new {id = Model.OrderID, page = Model.CurrentPage - 1, itemsPerPage = Model.ItemOnPage, searchText = Model.SearchText, sortField = Model.SortField, isAsc = Model.IsAsc})">Trước</a>
                                        </li>
                                    }

                                    @for (var i = 0; i < 5; i++)
                                    {
                                        if ((Model.CurrentPage + i) <= Model.TotalPage)
                                        {
                                            if (i == 0)
                                            {
                                                <li class="paginate_button active" aria-controls="dataTables-example" tabindex="0">
                                                    <a href="@Url.Action("ViewOrderDetails", "Administrator", new {id = Model.OrderID, page = Model.CurrentPage + i, itemsPerPage = Model.ItemOnPage, searchText = Model.SearchText, sortField = Model.SortField, isAsc = Model.IsAsc})">@((Model.CurrentPage + i).ToString())</a>
                                                </li>
                                            }
                                            else
                                            {
                                                <li class="paginate_button" aria-controls="dataTables-example" tabindex="0">
                                                    <a href="@Url.Action("ViewOrderDetails", "Administrator", new {id = Model.OrderID,  page = Model.CurrentPage + i, itemsPerPage = Model.ItemOnPage, searchText = Model.SearchText, sortField = Model.SortField, isAsc = Model.IsAsc })">@((Model.CurrentPage + i).ToString())</a>
                                                </li>
                                            }
                                        }
                                    }

                                    @if (Model.CurrentPage == Model.TotalPage)
                                    {
                                        <li class="paginate_button next disabled" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_next">
                                            <a href="#">Sau</a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="paginate_button next" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_next">
                                            <a href="@Url.Action("ViewOrderDetails", "Administrator", new {id = Model.OrderID, page = Model.CurrentPage + 1, itemsPerPage = Model.ItemOnPage, searchText = Model.SearchText, sortField = Model.SortField, isAsc = Model.IsAsc})">Sau</a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <h5>Không có sản phẩm nào trong đơn hàng này</h5>
                }
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    <script src="@Url.Content("~/Scripts/Admin/order.js")"></script>
}
