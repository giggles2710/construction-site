@model _170516.Models.Administrator.ViewOrderDetailsModel
@{
    ViewBag.Title = "ViewOrderDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="row">
    <div class="col-md-12">
        <div class="content-box-large">
            <div class="panel-heading">
                <ol class="breadcrumb">
                    <li class="active">
                        <a href="@Url.Action("ViewOrder", "Administrator")">Quản Lý Đơn hàng</a>
                    </li>
                </ol>
                <div class="panel-title title-3">Danh Sách chi tiết Đơn hàng</div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-lg-12">
                        <fieldset class="form-group">
                            <!-- PRODUCT NAME -->
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="ProductName">Số đơn hàng</label>
                                <div class="col-sm-7">
                                    <h6 class="info-box">@Model.Order.OrderNumber</h6>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="ProductName">Trạng thái đơn hàng</label>
                                <div class="col-sm-7">
                                    <h6 class="info-box">@Model.Order.OrderStatusToUser</h6>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="ProductName">Tên khách hàng</label>
                                <div class="col-sm-7">
                                    <h6 class="info-box">
                                    <a class="no-underline" href="@Url.Action("ViewCustomerDetails", "Administrator", new { id = Model.Order.CustomerID })" >@Model.Order.CustomerName</a></h6>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="ProductName">Shipper</label>
                                <div class="col-sm-7">
                                    <h6 class="info-box">
                                        <a class="no-underline" href="@Url.Action("ViewShipperDetails", "Administrator", new { id = Model.Order.ShipperID })">@Model.Order.ShipperCompanyName</a></h6>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="ProductName">Ngày đặt hàng</label>
                                <div class="col-sm-7">
                                    <h6 class="info-box">@Model.Order.OrderDate.ToShortDateString()</h6>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="ProductName">Ngày ship</label>
                                <div class="col-sm-7">
                                    <h6 class="info-box">@Model.Order.ShipDate.ToShortDateString()</h6>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="ProductName">Ngày trả tiền</label>
                                <div class="col-sm-7">
                                    <h6 class="info-box">@if (Model.Order.PaymentDate != null)
                                    {
                                        <span>@Model.Order.PaymentDate.Value.ToString("dd/MM/yyyy")</span>
                                    }</h6>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="ProductName">Tiền cước</label>
                                <div class="col-sm-7">
                                    <h6 class="info-box">
                                        @Html.DisplayFor(model => model.Order.Freight)                                        
                                    </h6>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="ProductName">Tiền thuế</label>
                                <div class="col-sm-7">
                                    <h6 class="info-box">@Html.DisplayFor(model => model.Order.SalesTax)</h6>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="ProductName">Tổng đơn hàng</label>
                                <div class="col-sm-7">
                                    <h6 class="info-box">@Html.DisplayFor(model => model.Order.TotalIncome)</h6>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
                @if (Model.OrderDetails.Any())
                {
                        <div class="row">
                            <div class="col-sm-6">
                                <input type="hidden" id="dataTables_sort_field_hidden" value="@Model.SortField" />
                                <input type="hidden" id="dataTables_sort_direction_hidden" value="@Model.IsAsc" />
                                @Html.HiddenFor(model => model.OrderID)
                                @Html.HiddenFor(model => model.SearchText)
                            </div>                            
                        </div>

                        <div class="row">
                            <div class="col-sm-12 dataTable_grid">
                                <table class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline" id="dataTable_orderDetails" role="grid" aria-describedby="dataTables-example_info" style="width: 100%;">
                                    <thead>
                                        <tr role="row">
                                            <th class="center" tabindex="0" rowspan="1" colspan="1">#</th>
                                            @if (Model.SortField.Equals("OrderID"))
                                            {
                                                if (Model.IsAsc)
                                                {
                                                    <th class="center" tabindex="0" rowspan="1" data-sort="OrderID" data-direction="desc" colspan="1">Order ID<i class="fa fa-fw fa-sort-asc"></i></th>
                                                }
                                                else
                                                {
                                                    <th class="center" tabindex="0" rowspan="1" data-sort="OrderID" data-direction="asc" colspan="1">Order ID <i class="fa fa-fw fa-sort-desc"></i></th>
                                                }
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="OrderID" data-direction="asc" colspan="1">Order ID <i class="fa fa-fw fa-sort-asc"></i></th>
                                            }
                                            @if (Model.SortField.Equals("ProductName"))
                                            {
                                                if (Model.IsAsc)
                                                {
                                                    <th class="center" tabindex="0" rowspan="1" data-sort="ProductName" data-direction="desc" colspan="1">Tên sản phẩm <i class="fa fa-fw fa-sort-asc"></i></th>
                                                }
                                                else
                                                {
                                                    <th class="center" tabindex="0" rowspan="1" data-sort="ProductName" data-direction="asc" colspan="1">Tên sản phẩm <i class="fa fa-fw fa-sort-desc"></i></th>
                                                }
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="ProductName" data-direction="asc" colspan="1">Tên sản phẩm<i class="fa fa-fw fa-sort-asc"></i></th>
                                            }

                                            @if (Model.SortField.Equals("Price"))
                                            {
                                                if (Model.IsAsc)
                                                {
                                                    <th class="center" tabindex="0" rowspan="1" data-sort="Price" data-direction="desc" colspan="1">Giá <i class="fa fa-fw fa-sort-asc"></i></th>
                                                }
                                                else
                                                {
                                                    <th class="center" tabindex="0" rowspan="1" data-sort="Price" data-direction="asc" colspan="1">Giá<i class="fa fa-fw fa-sort-desc"></i></th>
                                                }
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="Price" data-direction="asc" colspan="1">Giá<i class="fa fa-fw fa-sort-asc"></i></th>
                                            }
                                            @if (Model.SortField.Equals("Quantity"))
                                            {
                                                if (Model.IsAsc)
                                                {
                                                    <th class="center" tabindex="0" rowspan="1" data-sort="Quantity" data-direction="desc" colspan="1">Số lượng <i class="fa fa-fw fa-sort-asc"></i></th>
                                                }
                                                else
                                                {
                                                    <th class="center" tabindex="0" rowspan="1" data-sort="Quantity" data-direction="asc" colspan="1">Số lượng<i class="fa fa-fw fa-sort-desc"></i></th>
                                                }
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="Quantity" data-direction="asc" colspan="1">Số lượng<i class="fa fa-fw fa-sort-asc"></i></th>
                                            }

                                            @if (Model.SortField.Equals("Discount"))
                                            {
                                                if (Model.IsAsc)
                                                {
                                                    <th class="center" tabindex="0" rowspan="1" data-sort="Discount" data-direction="desc" colspan="1">Giảm giá <i class="fa fa-fw fa-sort-asc"></i></th>
                                                }
                                                else
                                                {
                                                    <th class="center" tabindex="0" rowspan="1" data-sort="Discount" data-direction="asc" colspan="1">Giảm giá <i class="fa fa-fw fa-sort-desc"></i></th>
                                                }
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="Discount" data-direction="asc" colspan="1">Giảm giá <i class="fa fa-fw fa-sort-asc"></i></th>
                                            }

                                            @if (Model.SortField.Equals("Size"))
                                            {
                                                if (Model.IsAsc)
                                                {
                                                    <th class="center" tabindex="0" rowspan="1" data-sort="Size" data-direction="desc" colspan="1">Size <i class="fa fa-fw fa-sort-asc"></i></th>
                                                }
                                                else
                                                {
                                                    <th class="center" tabindex="0" rowspan="1" data-sort="Size" data-direction="asc" colspan="1">Size<i class="fa fa-fw fa-sort-desc"></i></th>
                                                }
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="Size" data-direction="asc" colspan="1">Size<i class="fa fa-fw fa-sort-asc"></i></th>
                                            }
                                            @if (Model.SortField.Equals("Total"))
                                            {
                                                if (Model.IsAsc)
                                                {
                                                    <th class="center" tabindex="0" rowspan="1" data-sort="Total" data-direction="desc" colspan="1">Tổng <i class="fa fa-fw fa-sort-asc"></i></th>
                                                }
                                                else
                                                {
                                                    <th class="center" tabindex="0" rowspan="1" data-sort="Total" data-direction="asc" colspan="1">Tổng<i class="fa fa-fw fa-sort-desc"></i></th>
                                                }
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="Total" data-direction="asc" colspan="1">Tổng<i class="fa fa-fw fa-sort-asc"></i></th>
                                            }
                                            @if (Model.SortField.Equals("IsFulfilled"))
                                            {
                                                if (Model.IsAsc)
                                                {
                                                    <th class="center" tabindex="0" rowspan="1" data-sort="IsFulfilled" data-direction="desc" colspan="1">Trạng thái <i class="fa fa-fw fa-sort-asc"></i></th>
                                                }
                                                else
                                                {
                                                    <th class="center" tabindex="0" rowspan="1" data-sort="IsFulfilled" data-direction="asc" colspan="1">Trạng thái<i class="fa fa-fw fa-sort-desc"></i></th>
                                                }
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="IsFulfilled" data-direction="asc" colspan="1">Trạng thái<i class="fa fa-fw fa-sort-asc"></i></th>
                                            }
                                                                                        
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (var i = 1; i <= Model.OrderDetails.Count; i++)
                                        {
                                            <tr class="gradeA odd" role="row" data-url="@Model.OrderDetails[i - 1].OrderDetailID">
                                                <td>@i</td>
                                                <td>@Model.OrderDetails[i - 1].OrderID</td>
                                                <td>@Model.OrderDetails[i - 1].ProductName</td>
                                                <td>
                                                 @Html.DisplayFor(model => model.OrderDetails[i-1].Price)
                                               </td>
                                                <td>
                                                    <label id="Quantity">@Model.OrderDetails[i - 1].Quantity</label>
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => model.OrderDetails[i - 1].Discount)                                                    
                                                </td>
                                                <td>
                                                    <label id="Size">@Model.OrderDetails[i - 1].Size</label>
                                                <td>                                                    
                                                    @Html.DisplayFor(model => model.OrderDetails[i - 1].Total)
                                                </td>
                                                <td>
                                                    @if (Model.OrderDetails[i - 1].IsFulfilled)
                                                    {
                                                        <span id="IsFulfilled" class="btn-success">Đã xong</span>
                                                    }
                                                    else
                                                    {
                                                        <span id="IsFulfilled" class="btn-info">Chưa giao</span>
                                                    }                                                   
                                                </td>                                                                                               
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="dataTables_info" role="status" aria-live="polite">Hiển thị từ @Model.StartIndex tới @Model.EndIndex trong @Model.TotalNumber sản phẩm</div>
                            </div>
                        </div>
                        }
                        else
                        {
                        <h5>Không có sản phẩm nào trong đơn hàng này</h5>
                        }
                    </div>
        </div>
    </div>
</div>


@section Scripts
{
    <script src="@Url.Content("~/Scripts/Admin/order.js")"></script>
}
