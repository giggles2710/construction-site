@model _170516.Models.Administrator.CreateSupplierModel

@{
    ViewBag.Title = "Chi tiết nhà cung cấp";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">

    <div class="row">
        <div class="col-sm-12">
            <div class="btn-group pull-right m-t-5 m-b-20">
                @*<button type="button" class="btn btn-custom dropdown-toggle waves-effect waves-light" data-toggle="dropdown" aria-expanded="false">Thêm sản phẩm <span class="m-l-5"><i class="fa fa-plus"></i></span></button>*@
            </div>
            <h4 class="page-title">@Model.CompanyName</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="card-box">
                <div class="form-horizontal">
                    <div class="row">
                        <div class="col-md-8 col-lg-8 detail-view">
                            @Html.HiddenFor(model => model.SupplierID)
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="CompanyName">Tên công ty  </label>
                                <div class="col-sm-7">
                                    <p class="info-box">@Model.CompanyName</p>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="ContactLName">Họ người liên lạc </label>
                                <div class="col-sm-7">
                                    <p class="info-box">@string.Format("{0} {1}", Model.ContactLName, Model.ContactLName)</p>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="ContactFName">Tên người liên lạc </label>
                                <div class="col-sm-7">
                                    <p class="info-box">@string.Format("{0} {1}", Model.ContactFName, Model.ContactFName)</p>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="Address1">Địa chỉ 1  </label>
                                <div class="col-sm-7">
                                    <p class="info-box">@Model.Address1</p>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="Address2">Địa chỉ 2  </label>
                                <div class="col-sm-7">
                                    <p class="info-box">@Model.Address2</p>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="City">Tỉnh/Thành phố  </label>
                                <div class="col-sm-7">
                                    <p class="info-box">@Model.City</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="Phone">Số điện thoại  </label>
                                <div class="col-sm-7">
                                    <p class="info-box">@Model.Phone</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="Fax">Fax  </label>
                                <div class="col-sm-7">
                                    <p class="info-box">@Model.Fax</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="EmailAddress">Địa chỉ email  </label>
                                <div class="col-sm-7">
                                    <p class="info-box">@Model.EmailAddress</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="Discount">Giảm giá  </label>
                                <div class="col-sm-7">
                                    <p class="info-box">@Model.Discount</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="ProductType">Loại sản phẩm  </label>
                                <div class="col-sm-7">
                                    <p class="info-box">@Model.ProductType</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4 col-lg-4 detail-view">
                            <div class="form-group">
                                <label class="control-label">Logo nhà cung cấp</label>
                                <!-- IMAGE -->
                                <div class="image-box">
                                    @if (string.IsNullOrEmpty(Model.Logo))
                                    {
                                        <img id="ImageBox" src="~/Content/Image/image_placeholder.jpg" class="image-box" />
                                    }
                                    else
                                    {
                                        <img id="ImageBox" src="@Model.Logo" class="image-box" />
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="@Url.Content("~/Scripts/Admin/supplier.js")"></script>
}
