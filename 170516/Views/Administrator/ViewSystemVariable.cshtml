@model _170516.Models.Administrator.ViewSystemVariableModel
@{
    ViewBag.Title = "Quản lý thông tin hệ thống";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="btn-group pull-right m-t-5 m-b-20">
                <a id="btnAddSystemVariable" href="#" class="btn btn-custom dropdown-toggle waves-effect waves-light">Thêm thông tin hệ thống <span class="m-l-5"><i class="fa fa-plus"></i></span></a>
            </div>
            <h4 class="page-title">Quản lý thông tin hệ thống</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box table-responsive">
                <h4 class="header-title m-t-0 m-b-30">Danh sách thông tin hệ thống</h4>

                <div class="data-table-wrapper form-inline dt-bootstrap no-footer">
                    @if (Model.SystemVariables.Any())
                    {
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="filter-wrapper">
                                    <label>
                                        Hiển thị <select id="dataTables_showNumberSelect" aria-controls="dataTables-example" class="form-control input-sm">
                                            @if (Model.ItemOnPage == 10)
                                            {
                                                <option value="10" selected>10</option>
                                            }
                                            else
                                            {
                                                <option value="10">10</option>
                                            }
                                            @if (Model.ItemOnPage == 25)
                                            {
                                                <option value="25" selected>25</option>
                                            }
                                            else
                                            {
                                                <option value="25">25</option>
                                            }
                                            @if (Model.ItemOnPage == 50)
                                            {
                                                <option value="50" selected>50</option>
                                            }
                                            else
                                            {
                                                <option value="50">50</option>
                                            }
                                            @if (Model.ItemOnPage == 100)
                                            {
                                                <option value="100" selected>100</option>
                                            }
                                            else
                                            {
                                                <option value="100">100</option>
                                            }
                                        </select>
                                    </label>
                                </div>
                            </div><div class="col-sm-6">
                                <div class="search-wrapper">
                                    @if (string.IsNullOrWhiteSpace(Model.SearchText))
                                    {
                                        <label><button type="button" id="dataTables_search" class="btn btn-default btn-sm"><i class="fa fa-search"></i></button> <input type="search" id="dataTables_show_item_search" class="form-control input-sm" placeholder="" aria-controls="datatable-fixed-header"></label>
                                    }
                                    else
                                    {
                                        <label><button type="button" id="dataTables_search" class="btn btn-default btn-sm"><i class="fa fa-search"></i></button> <input type="search" id="dataTables_show_item_search" value="@Model.SearchText" class="form-control input-sm" placeholder="" aria-controls="datatable-fixed-header"></label>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="table-wrapper">
                                    <table class="table table-striped dt-responsive nowrap no-footer dtr-inline" role="grid">
                                        <tbody>
                                            @for (var i = 1; i <= Model.SystemVariables.Count; i++)
                                            {
                                                <tr class="gradeA odd" role="row">
                                                    <td>@i</td>
                                                    <td>@Model.SystemVariables[i - 1].Code</td>
                                                    <td>@Model.SystemVariables[i - 1].Name</td>
                                                    <td>@Model.SystemVariables[i - 1].Value</td>
                                                    <td style="text-align:center;">
                                                        <a id="updateSystemVariableLink" class="action-link update-link add-update-modal" title="Cập nhật" href="#" 
                                                           data-id="@Model.SystemVariables[i - 1].VariableId"
                                                           data-code="@Model.SystemVariables[i - 1].Code"
                                                           data-name="@Model.SystemVariables[i - 1].Name"
                                                           data-value="@Model.SystemVariables[i - 1].Value"><i class="fa fa-pencil"></i></a>
                                                        <a id="removeSystemVariableLink" class="action-link remove-link product" title="Xóa" href="#" data-url="@Url.Action("RemoveSystemVariable", "Administrator", new { id = Model.SystemVariables[i - 1].VariableId })"><i class="fa fa-remove"></i></a>
                                                    </td>
                                                </tr>
                                            }

                                            @if (Model.SystemVariables.Count < Model.ItemOnPage)
                                            {
                                                for (var i = Model.SystemVariables.Count + 1; i <= Model.ItemOnPage; i++)
                                                {
                                                    <tr class="odd" role="row">
                                                        <td>@i</td>
                                                        <td></td>
                                                        <td></td>
                                                        <td></td>
                                                        <td></td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                        <thead>
                                            <tr role="row">
                                                <th class="center" tabindex="0" rowspan="1" colspan="1">#</th>
                                                @if (Model.SortField.Equals("Code"))
                                                {
                                                    if (Model.IsAsc)
                                                    {
                                                        <th class="center" tabindex="0" rowspan="1" data-sort="Code" data-direction="desc" colspan="1">Phân Loại <i class="fa fa-fw fa-sort-asc"></i></th>
                                                    }
                                                    else
                                                    {
                                                        <th class="center" tabindex="0" rowspan="1" data-sort="Code" data-direction="asc" colspan="1">Phân Loại <i class="fa fa-fw fa-sort-desc"></i></th>
                                                    }
                                                }
                                                else
                                                {
                                                    <th class="center" tabindex="0" rowspan="1" data-sort="Code" data-direction="asc" colspan="1">Phân Loại <i class="fa fa-fw fa-sort-asc"></i></th>
                                                }
                                                @if (Model.SortField.Equals("Name"))
                                                {
                                                    if (Model.IsAsc)
                                                    {
                                                        <th class="center" tabindex="0" rowspan="1" data-sort="Name" data-direction="desc" colspan="1">Tên <i class="fa fa-fw fa-sort-asc"></i></th>
                                                    }
                                                    else
                                                    {
                                                        <th class="center" tabindex="0" rowspan="1" data-sort="Name" data-direction="asc" colspan="1">Tên <i class="fa fa-fw fa-sort-desc"></i></th>
                                                    }
                                                }
                                                else
                                                {
                                                    <th class="center" tabindex="0" rowspan="1" data-sort="Name" data-direction="asc" colspan="1">Tên <i class="fa fa-fw fa-sort-asc"></i></th>
                                                }
                                                @if (Model.SortField.Equals("Value"))
                                                {
                                                    if (Model.IsAsc)
                                                    {
                                                        <th class="center" tabindex="0" rowspan="1" data-sort="Value" data-direction="desc" colspan="1">Giá Trị <i class="fa fa-fw fa-sort-asc"></i></th>
                                                    }
                                                    else
                                                    {
                                                        <th class="center" tabindex="0" rowspan="1" data-sort="Value" data-direction="asc" colspan="1">Giá Trị <i class="fa fa-fw fa-sort-desc"></i></th>
                                                    }
                                                }
                                                else
                                                {
                                                    <th class="center" tabindex="0" rowspan="1" data-sort="Value" data-direction="asc" colspan="1">Giá Trị <i class="fa fa-fw fa-sort-asc"></i></th>
                                                }
                                                <th class="center" tabindex="0" rowspan="1" colspan="1"></th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="summary-status" role="status" aria-live="polite">Đang hiển thị record @Model.StartIndex tới @Model.EndIndex trong @Model.TotalNumber records</div>
                            </div>
                            <div class="col-sm-6">
                                <div class="pagination-wrapper">
                                    <ul class="pagination">
                                        @if (Model.CurrentPage == 1)
                                        {
                                            <li class="paginate_button previous disabled" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_previous">
                                                <a href="#">Trước</a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="paginate_button previous" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_previous">
                                                <a href="@Url.Action("ViewRequest", "Administrator", new {page = Model.CurrentPage - 1, itemsPerPage = Model.ItemOnPage, searchText = Model.SearchText, sortField = Model.SortField, isAsc = Model.IsAsc})">Trước</a>
                                            </li>
                                        }

                                        @for (var i = 0; i < 5; i++)
                                        {
                                            if ((Model.CurrentPage + i) <= Model.TotalPage)
                                            {
                                                if (i == 0)
                                                {
                                                    <li class="paginate_button active" aria-controls="dataTables-example" tabindex="0">
                                                        <a href="@Url.Action("ViewRequest", "Administrator", new {page = Model.CurrentPage + i, itemsPerPage = Model.ItemOnPage, searchText = Model.SearchText, sortField = Model.SortField, isAsc = Model.IsAsc})">@((Model.CurrentPage + i).ToString())</a>
                                                    </li>
                                                }
                                                else
                                                {
                                                    <li class="paginate_button" aria-controls="dataTables-example" tabindex="0">
                                                        <a href="@Url.Action("ViewRequest", "Administrator", new { page = Model.CurrentPage + i, itemsPerPage = Model.ItemOnPage, searchText = Model.SearchText, sortField = Model.SortField, isAsc = Model.IsAsc })">@((Model.CurrentPage + i).ToString())</a>
                                                    </li>
                                                }
                                            }
                                        }

                                        @if (Model.CurrentPage == Model.TotalPage)
                                        {
                                            <li class="paginate_button next disabled" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_next">
                                                <a href="#">Sau</a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="paginate_button next" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_next">
                                                <a href="@Url.Action("ViewRequest", "Administrator", new {page = Model.CurrentPage + 1, itemsPerPage = Model.ItemOnPage, searchText = Model.SearchText, sortField = Model.SortField, isAsc = Model.IsAsc})">Sau</a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <h5>Không có record nào được lưu trong cơ sở dữ liệu.</h5>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="add-system-variable-modal" tabindex="-1" role="dialog" aria-labelledby="add-system-variable-modal" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Thêm thông tin hệ thống</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("AddSystemVariable", "Administrator", FormMethod.Post, new { @id = "addSystemVariableForm" }))
                {
                    <div class="form-horizontal">
                        <div class="row">
                            <input type="hidden" value="0" id="VariableId" />
                            <div class="col-md-12 col-lg-12">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="Code">Mã thông tin <span class="text-danger">*</span></label>
                                    <div class="col-sm-7">
                                        <input type="text" id="Code" class="form-control" />
                                        <span class="input-error-box text-danger field-validation-error"></span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="Name">Tên <span class="text-danger">*</span></label>
                                    <div class="col-sm-7">
                                        <input type="text" id="Name" class="form-control" />
                                        <span class="input-error-box text-danger field-validation-error"></span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="Value">Giá trị <span class="text-danger">*</span></label>
                                    <div class="col-sm-7">
                                        <input type="text" id="Value" class="form-control" />
                                        <span class="input-error-box text-danger field-validation-error"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-lg-12">
                                <div class="form-group">
                                    <div class="col-md-12 form-button">
                                        <button class="btn btn-primary add-update-modal" type="button" id="SubmitSystemVariable"><i class="glyphicon glyphicon-floppy-disk"></i> Lưu</button>
                                        <button class="btn btn-danger" data-dismiss="modal"><i class="glyphicon glyphicon-remove"></i> Đóng</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="@Url.Content("~/Scripts/Admin/systemVariable.js")"></script>
}
