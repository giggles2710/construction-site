@if (User.Identity.IsAuthenticated)
{
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-user" style="margin-right:5px;"> @User.Identity.Name <span class="caret"></span></a>
    <ul class="dropdown-menu" role="menu">
        <li><a href="@Url.Action("LogOff","Account")">Đăng Xuất</a></li>
    </ul>
}
else
{
    <a href="@Url.Action("Login","Account")"><i class="fa fa-user" style="margin-right:5px;"></i>Đăng Nhập</a>
}
