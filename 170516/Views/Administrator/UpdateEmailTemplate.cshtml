@model _170516.Models.Administrator.EmailTemplateModel
@{
    ViewBag.Title = "Chỉnh sửa mẫu email";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="btn-group pull-right m-t-5 m-b-20">

            </div>
            <h4 class="page-title">Cập nhật mẫu email</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="card-box">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "updateEmailTemplateForm" }))
                {
                    @Html.HiddenFor(model => model.EmailTemplateId)
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-12 col-lg-12">
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" for="EmailTemplateName">Tên mẫu Email <span class="text-danger">*</span></label>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(model => model.EmailTemplateName, new { @class = "form-control" }) <span class="input-error-box text-danger"></span>
                                        @Html.ValidationMessageFor(model => model.EmailTemplateName, null, new { @class = "input-error-box text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" for="EmailSubject">Tiêu đề <span class="text-danger">*</span></label>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(model => model.EmailSubject, new { @class = "form-control" }) <span class="input-error-box text-danger"></span>
                                        @Html.ValidationMessageFor(model => model.EmailSubject, null, new { @class = "input-error-box text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label" for="">Từ khóa</label>
                                    <div class="col-sm-9">
                                        @foreach (var item in Model.MergeFields)
                                        {
                                            <label class="label label-success merge-item">@item</label>
                                        }
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label" for="">Nội dung<span class="text-danger">*</span></label>
                                    <div class="col-sm-9">
                                        <div id="emailTemplate-area-html">
                                            @Html.TextAreaFor(model => model.HtmlTextContent, new { @class = "tiny_mce_input form-control", @id = "txtA_htmlVersion", @style = "height:250px", maxlength = 5000 })
                                            @Html.ValidationMessageFor(model => model.HtmlTextContent)
                                        </div>

                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-2"></div>
                                    <div class="col-sm-9">
                                        <span class="input-error-box text-danger" id="contentValidation"></span>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-lg-12">
                                <div class="form-group">
                                    <div class="col-md-12 form-button">
                                        <button class="btn btn-primary" type="button" id="SubmitUpdateEmailTemp"><i class="glyphicon glyphicon-floppy-disk"></i> Lưu</button>
                                        <button class="btn btn-danger" type="button" id="DeleteEmailTemplate"><i class="glyphicon glyphicon-remove"></i>Xóa</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="@Url.Content("~/Scripts/Admin/emailTemplate.js")"></script>
}
