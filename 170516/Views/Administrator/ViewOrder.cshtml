@model _170516.Models.Administrator.ViewOrderModel
@{
    ViewBag.Title = "ViewOrder";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <div class="content-box-large">
            <div class="panel-heading">
                <ol class="breadcrumb">
                    <li><a href="@Url.Action("ViewOrder","Administrator")">Quản Lý Đơn hàng</a></li>                    
                </ol>
                <div class="panel-title title-3">Danh Sách Đơn hàng</div>               
            </div>
            <div class="panel-body">
                @if (Model.Orders.Any())
            {
                    <div class="row">
                        <div class="col-sm-6">
                            <input type="hidden" id="dataTables_sort_field_hidden" value="@Model.SortField" />
                            <input type="hidden" id="dataTables_sort_direction_hidden" value="@Model.IsAsc" />
                            <div class="dataTables_show_item_div form-inline">
                                <label><span>Hiển thị</span></label>
                                <select id="dataTables_showNumberSelectOrder" aria-controls="dataTables-example" class="form-control input-sm">
                                    @if (Model.ItemOnPage == 10)
                                    {
                                        <option value="10" selected>10</option>
                                    }
                                    else
                                    {
                                        <option value="10">10</option>
                                    }
                                    @if (Model.ItemOnPage == 25)
                                    {
                                        <option value="25" selected>25</option>
                                    }
                                    else
                                    {
                                        <option value="25">25</option>
                                    }
                                    @if (Model.ItemOnPage == 50)
                                    {
                                        <option value="50" selected>50</option>
                                    }
                                    else
                                    {
                                        <option value="50">50</option>
                                    }
                                    @if (Model.ItemOnPage == 100)
                                    {
                                        <option value="100" selected>100</option>
                                    }
                                    else
                                    {
                                        <option value="100">100</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div id="dataTables_show_item_search" class="dataTables_search_div form-inline">
                                @if (!string.IsNullOrEmpty(Model.SearchText) && Model.SearchText.Equals("NULL"))
                                {
                                    <input type="search" class="form-control input-sm" value="">
                                }
                                else
                                {
                                    <input type="search" class="form-control input-sm" value="@Model.SearchText">
                                }
                                <button type="button" id="dataTables_searchOrder" class="btn btn-default btn-sm"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12 dataTable_grid">
                            <table class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline" id="dataTable_order" role="grid" aria-describedby="dataTables-example_info" style="width: 100%;">
                                <thead>
                                    <tr role="row">
                                        <th class="center" tabindex="0" rowspan="1" colspan="1">#</th>
                                        @if (Model.SortField.Equals("Customer"))
                                        {
                                            if (Model.IsAsc)
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="Customer" data-direction="desc" colspan="1">Tên khách hàng<i class="fa fa-fw fa-sort-asc"></i></th>
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="Customer" data-direction="asc" colspan="1">Tên khách hàng <i class="fa fa-fw fa-sort-desc"></i></th>
                                            }
                                        }
                                        else
                                        {
                                            <th class="center" tabindex="0" rowspan="1" data-sort="Customer" data-direction="asc" colspan="1">Tên khách hàng <i class="fa fa-fw fa-sort-asc"></i></th>
                                        }
                                        @if (Model.SortField.Equals("Shipper"))
                                        {
                                            if (Model.IsAsc)
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="Shipper" data-direction="desc" colspan="1">Shipper <i class="fa fa-fw fa-sort-asc"></i></th>
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="Shipper" data-direction="asc" colspan="1">Shipper <i class="fa fa-fw fa-sort-desc"></i></th>
                                            }
                                        }
                                        else
                                        {
                                            <th class="center" tabindex="0" rowspan="1" data-sort="Shipper" data-direction="asc" colspan="1">Shipper<i class="fa fa-fw fa-sort-asc"></i></th>
                                        }
                                        
                                        @if (Model.SortField.Equals("Freight"))
                                        {
                                            if (Model.IsAsc)
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="Freight" data-direction="desc" colspan="1">Cước <i class="fa fa-fw fa-sort-asc"></i></th>
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="Freight" data-direction="asc" colspan="1">Cước<i class="fa fa-fw fa-sort-desc"></i></th>
                                            }
                                        }
                                        else
                                        {
                                            <th class="center" tabindex="0" rowspan="1" data-sort="Freight" data-direction="asc" colspan="1">Cước<i class="fa fa-fw fa-sort-asc"></i></th>
                                        }
                                        @if (Model.SortField.Equals("SalesTax"))
                                        {
                                            if (Model.IsAsc)
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="SalesTax" data-direction="desc" colspan="1">Thuế <i class="fa fa-fw fa-sort-asc"></i></th>
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="SalesTax" data-direction="asc" colspan="1">Thuế<i class="fa fa-fw fa-sort-desc"></i></th>
                                            }
                                        }
                                        else
                                        {
                                            <th class="center" tabindex="0" rowspan="1" data-sort="SalesTax" data-direction="asc" colspan="1">Thuế<i class="fa fa-fw fa-sort-asc"></i></th>
                                        }

                                        @if (Model.SortField.Equals("Paid"))
                                        {
                                            if (Model.IsAsc)
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="Paid" data-direction="desc" colspan="1">Đã trả <i class="fa fa-fw fa-sort-asc"></i></th>
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="Paid" data-direction="asc" colspan="1">Đã trả <i class="fa fa-fw fa-sort-desc"></i></th>
                                            }
                                        }
                                        else
                                        {
                                            <th class="center" tabindex="0" rowspan="1" data-sort="Paid" data-direction="asc" colspan="1">Đã trả <i class="fa fa-fw fa-sort-asc"></i></th>
                                        }

                                        @if (Model.SortField.Equals("Total"))
                                        {
                                            if (Model.IsAsc)
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="Total" data-direction="desc" colspan="1">Tổng đơn hàng <i class="fa fa-fw fa-sort-asc"></i></th>
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="Total" data-direction="asc" colspan="1">Tổng đơn hàng<i class="fa fa-fw fa-sort-desc"></i></th>
                                            }
                                        }
                                        else
                                        {
                                            <th class="center" tabindex="0" rowspan="1" data-sort="Total" data-direction="asc" colspan="1">Tổng đơn hàng<i class="fa fa-fw fa-sort-asc"></i></th>
                                        }
                                        @if (Model.SortField.Equals("ShipDate"))
                                        {
                                            if (Model.IsAsc)
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="ShipDate" data-direction="desc" colspan="1">Ngày ship <i class="fa fa-fw fa-sort-asc"></i></th>
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="ShipDate" data-direction="asc" colspan="1">Ngày ship<i class="fa fa-fw fa-sort-desc"></i></th>
                                            }
                                        }
                                        else
                                        {
                                            <th class="center" tabindex="0" rowspan="1" data-sort="ShipDate" data-direction="asc" colspan="1">Ngày ship<i class="fa fa-fw fa-sort-asc"></i></th>
                                        }
                                        @if (Model.SortField.Equals("PaymentDate"))
                                        {
                                            if (Model.IsAsc)
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="PaymentDate" data-direction="desc" colspan="1">Ngày trả tiền <i class="fa fa-fw fa-sort-asc"></i></th>
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="PaymentDate" data-direction="asc" colspan="1">Ngày trả tiền<i class="fa fa-fw fa-sort-desc"></i></th>
                                            }
                                        }
                                        else
                                        {
                                            <th class="center" tabindex="0" rowspan="1" data-sort="PaymentDate" data-direction="asc" colspan="1">Ngày trả tiền<i class="fa fa-fw fa-sort-asc"></i></th>
                                        }
                                        @if (Model.SortField.Equals("OrderDate"))
                                        {
                                            if (Model.IsAsc)
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="OrderDate" data-direction="desc" colspan="1">Ngày đặt hàng <i class="fa fa-fw fa-sort-asc"></i></th>
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="OrderDate" data-direction="asc" colspan="1">Ngày đặt hàng<i class="fa fa-fw fa-sort-desc"></i></th>
                                            }
                                        }
                                        else
                                        {
                                            <th class="center" tabindex="0" rowspan="1" data-sort="OrderDate" data-direction="asc" colspan="1">Ngày đặt hàng<i class="fa fa-fw fa-sort-asc"></i></th>
                                        }
                                        @if (Model.SortField.Equals("OrderStatus"))
                                        {
                                            if (Model.IsAsc)
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="OrderStatus" data-direction="desc" colspan="1">Trạng thái <i class="fa fa-fw fa-sort-asc"></i></th>
                                            }
                                            else
                                            {
                                                <th class="center" tabindex="0" rowspan="1" data-sort="OrderStatus" data-direction="asc" colspan="1">Trạng thái<i class="fa fa-fw fa-sort-desc"></i></th>
                                            }
                                        }
                                        else
                                        {
                                            <th class="center" tabindex="0" rowspan="1" data-sort="OrderStatus" data-direction="asc" colspan="1">Trạng thái<i class="fa fa-fw fa-sort-asc"></i></th>
                                        }
                                        <th class="center" tabindex="0" rowspan="1" colspan="1"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (var i = 1; i <= Model.Orders.Count; i++)
                                    {
                                        <tr class="gradeA odd" role="row">
                                            <td>@i</td>
                                            <td>@Model.Orders[i - 1].CustomerName</td>
                                            <td>@Model.Orders[i - 1].ShipperCompanyName</td>
                                            <td>
                                                @Html.DisplayFor(model => model.Orders[i - 1].Freight)
                                            </td>
                                            <td>
                                            @Html.DisplayFor(model => model.Orders[i - 1].SalesTax)
                                            </td>
                                            <td>
                                            @Html.DisplayFor(model => model.Orders[i - 1].Paid)
                                            </td>
                                            <td>
                                            @Html.DisplayFor(model => model.Orders[i - 1].TotalIncome)                                            
                                            <td>@Model.Orders[i - 1].ShipDate.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                @if (Model.Orders[i - 1].PaymentDate != null)
                                                {
                                                    <span>@Model.Orders[i - 1].PaymentDate.Value.ToShortDateString()</span>
                                                }                                            
                                            </td>
                                            <td>@Model.Orders[i - 1].OrderDate.ToString("dd/MM/yyyy")</td>                                            
                                            <td> 
                                                @if (@Model.Orders[i - 1].OrderStatusToUser == "Đơn hàng đã hủy")
                                                {
                                                    <span class="btn-danger">
                                                        @Model.Orders[i - 1].OrderStatusToUser
                                                    </span>
                                                }
                                                else
                                                if (@Model.Orders[i - 1].OrderStatusToUser == "Đã được chuyển đến")
                                                {
                                                    <span class="btn-success">
                                                        @Model.Orders[i - 1].OrderStatusToUser
                                                    </span>
                                                }
                                                else 
                                                if (@Model.Orders[i - 1].OrderStatusToUser == "Đang được xử lý")
                                                {
                                                <span class="btn-primary">
                                                    @Model.Orders[i - 1].OrderStatusToUser
                                                </span>
                                                }                                                
                                                else
                                                {
                                                    <span class="btn-info">@Model.Orders[i - 1].OrderStatusToUser</span>                                                    
                                                }
                                                
                                            </td>   
                                            <td>
                                                <a class="action-link detail-link" title="Chi tiết đơn hàng" href="@Url.Action("ViewOrderDetails", "Administrator", new { id = Model.Orders[i - 1].OrderID })"><i class="fa fa-info-circle"></i></a>
                                                <a class="action-link update-link" title="Cập nhật" href="@Url.Action("UpdateOrder", "Administrator", new { id = Model.Orders[i - 1].OrderID })"><i class="fa fa-pencil"></i></a>
                                                @if (@Model.Orders[i - 1].OrderStatusToUser != "Đơn hàng đã hủy")
                                                {
                                                    <a class="action-link remove-link order" title="Hủy đơn hàng" href="#" data-url="@Url.Action("CancelOrder", "Administrator", new { id = Model.Orders[i - 1].OrderID })"><i class="fa fa-remove"></i></a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="dataTables_info" role="status" aria-live="polite">Hiển thị từ @Model.StartIndex tới @Model.EndIndex trong @Model.TotalNumber đơn hàng</div>
                        </div>
                        <div class="col-sm-6">
                            <div class="dataTables_paginate">
                                <ul class="pagination">
                                    @if (Model.CurrentPage == 1)
                                    {
                                        <li class="paginate_button previous disabled" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_previous">
                                            <a href="#">Trước</a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="paginate_button previous" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_previous">
                                            <a href="@Url.Action("ViewOrder", "Administrator", new {page = Model.CurrentPage - 1, itemsPerPage = Model.ItemOnPage, searchText = Model.SearchText, sortField = Model.SortField, isAsc = Model.IsAsc})">Trước</a>
                                        </li>
                                    }

                                    @for (var i = 0; i < 5; i++)
                                    {
                                        if ((Model.CurrentPage + i) <= Model.TotalPage)
                                        {
                                            if (i == 0)
                                            {
                                                <li class="paginate_button active" aria-controls="dataTables-example" tabindex="0">
                                                    <a href="@Url.Action("ViewOrder", "Administrator", new {page = Model.CurrentPage + i, itemsPerPage = Model.ItemOnPage, searchText = Model.SearchText, sortField = Model.SortField, isAsc = Model.IsAsc})">@((Model.CurrentPage + i).ToString())</a>
                                                </li>
                                            }
                                            else
                                            {
                                                <li class="paginate_button" aria-controls="dataTables-example" tabindex="0">
                                                    <a href="@Url.Action("ViewOrder", "Administrator", new { page = Model.CurrentPage + i, itemsPerPage = Model.ItemOnPage, searchText = Model.SearchText, sortField = Model.SortField, isAsc = Model.IsAsc })">@((Model.CurrentPage + i).ToString())</a>
                                                </li>
                                            }
                                        }
                                    }

                                    @if (Model.CurrentPage == Model.TotalPage)
                                    {
                                        <li class="paginate_button next disabled" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_next">
                                            <a href="#">Sau</a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="paginate_button next" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_next">
                                            <a href="@Url.Action("ViewOrder", "Administrator", new {page = Model.CurrentPage + 1, itemsPerPage = Model.ItemOnPage, searchText = Model.SearchText, sortField = Model.SortField, isAsc = Model.IsAsc})">Sau</a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <h5>Không có đơn hàng nào được lưu trong cơ sở dữ liệu.</h5>
                }
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    <script src="@Url.Content("~/Scripts/Admin/order.js")"></script>
}
