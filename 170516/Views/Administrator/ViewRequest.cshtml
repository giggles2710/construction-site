@model _170516.Models.Administrator.ViewRequestModel
@{
    ViewBag.Title = "Quản lý feedback từ khách hàng";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h4 class="page-title">Quản lý feedback khách hàng</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box table-responsive">
                <h4 class="header-title m-t-0 m-b-30">Danh sách feedback từ khách hàng</h4>

                <div class="data-table-wrapper form-inline dt-bootstrap no-footer">
                    @if (Model.Requests.Any())
                    {
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="filter-wrapper">
                                    <label>
                                        Hiển thị <select id="dataTables_showNumberSelect" aria-controls="dataTables-example" class="form-control input-sm">
                                            @if (Model.ItemOnPage == 10)
                                            {
                                                <option value="10" selected>10</option>
                                            }
                                            else
                                            {
                                                <option value="10">10</option>
                                            }
                                            @if (Model.ItemOnPage == 25)
                                            {
                                                <option value="25" selected>25</option>
                                            }
                                            else
                                            {
                                                <option value="25">25</option>
                                            }
                                            @if (Model.ItemOnPage == 50)
                                            {
                                                <option value="50" selected>50</option>
                                            }
                                            else
                                            {
                                                <option value="50">50</option>
                                            }
                                            @if (Model.ItemOnPage == 100)
                                            {
                                                <option value="100" selected>100</option>
                                            }
                                            else
                                            {
                                                <option value="100">100</option>
                                            }
                                        </select>
                                    </label>
                                </div>
                            </div><div class="col-sm-6">
                                <div class="search-wrapper">
                                    @if (string.IsNullOrWhiteSpace(Model.SearchText))
                                    {
                                        <label><button type="button" id="dataTables_search" class="btn btn-default btn-sm"><i class="fa fa-search"></i></button> <input type="search" id="dataTables_show_item_search" class="form-control input-sm" placeholder="" aria-controls="datatable-fixed-header"></label>
                                    }
                                    else
                                    {
                                        <label><button type="button" id="dataTables_search" class="btn btn-default btn-sm"><i class="fa fa-search"></i></button> <input type="search" id="dataTables_show_item_search" value="@Model.SearchText" class="form-control input-sm" placeholder="" aria-controls="datatable-fixed-header"></label>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="table-wrapper">
                                    <table class="table table-striped dt-responsive nowrap no-footer dtr-inline" role="grid">
                                        <tbody>
                                            @for (var i = 1; i <= Model.Requests.Count; i++)
                                            {
                                                <tr class="gradeA odd" role="row">
                                                    <td>@i</td>
                                                    <td>@Model.Requests[i - 1].FullName</td>
                                                    <td>@Model.Requests[i - 1].Content</td>
                                                    <td>@Model.Requests[i - 1].ReplyUser</td>
                                                    <td style="text-align:center;">
                                                        @if (Model.Requests[i - 1].IsNew)
                                                        {
                                                            <i class="fa fa-check fa-2x text-success"></i>
                                                        }
                                                    </td>
                                                    <td>@Model.Requests[i - 1].DateCreated.ToString("dd/MM/yyyy hh:mm:ss")</td>
                                                    <td style="text-align:center;">
                                                        <a class="action-link detail-link" title="Chi tiết" href="@Url.Action("ViewRequestDetail", "Administrator", new { id = Model.Requests[i - 1].RequestId })"><i class="fa fa-info-circle fa-lg" title="Chi tiết"></i></a>
                                                    </td>
                                                </tr>
                                            }

                                            @if (Model.Requests.Count < Model.ItemOnPage)
                                            {
                                                for (var i = Model.Requests.Count + 1; i <= Model.ItemOnPage; i++)
                                                {
                                                    <tr class="odd" role="row">
                                                        <td>@i</td>
                                                        <td></td>
                                                        <td></td>
                                                        <td></td>
                                                        <td></td>
                                                        <td></td>
                                                        <td></td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                        <thead>
                                            <tr role="row">
                                                <th class="center" tabindex="0" rowspan="1" colspan="1">#</th>
                                                @if (Model.SortField.Equals("FullName"))
                                                {
                                                    if (Model.IsAsc)
                                                    {
                                                        <th class="center" tabindex="0" rowspan="1" data-sort="FullName" data-direction="desc" colspan="1">Họ và Tên<i class="fa fa-fw fa-sort-asc"></i></th>
                                                    }
                                                    else
                                                    {
                                                        <th class="center" tabindex="0" rowspan="1" data-sort="FullName" data-direction="asc" colspan="1">Họ và Tên <i class="fa fa-fw fa-sort-desc"></i></th>
                                                    }
                                                }
                                                else
                                                {
                                                    <th class="center" tabindex="0" rowspan="1" data-sort="FullName" data-direction="asc" colspan="1">Họ và Tên <i class="fa fa-fw fa-sort-asc"></i></th>
                                                }
                                                @if (Model.SortField.Equals("RequestContent"))
                                                {
                                                    if (Model.IsAsc)
                                                    {
                                                        <th class="center" tabindex="0" rowspan="1" data-sort="RequestContent" data-direction="desc" colspan="1">Nội dung yêu cầu <i class="fa fa-fw fa-sort-asc"></i></th>
                                                    }
                                                    else
                                                    {
                                                        <th class="center" tabindex="0" rowspan="1" data-sort="RequestContent" data-direction="asc" colspan="1">Nội dung yêu cầu <i class="fa fa-fw fa-sort-desc"></i></th>
                                                    }
                                                }
                                                else
                                                {
                                                    <th class="center" tabindex="0" rowspan="1" data-sort="RequestContent" data-direction="asc" colspan="1">Nội dung yêu cầu <i class="fa fa-fw fa-sort-asc"></i></th>
                                                }
                                                @if (Model.SortField.Equals("ReplyUser"))
                                                {
                                                    if (Model.IsAsc)
                                                    {
                                                        <th class="center" tabindex="0" rowspan="1" data-sort="ReplyUser" data-direction="desc" colspan="1">Người duyệt <i class="fa fa-fw fa-sort-asc"></i></th>
                                                    }
                                                    else
                                                    {
                                                        <th class="center" tabindex="0" rowspan="1" data-sort="ReplyUser" data-direction="asc" colspan="1">Người duyệt <i class="fa fa-fw fa-sort-desc"></i></th>
                                                    }
                                                }
                                                else
                                                {
                                                    <th class="center" tabindex="0" rowspan="1" data-sort="ReplyUser" data-direction="asc" colspan="1">Người duyệt <i class="fa fa-fw fa-sort-asc"></i></th>
                                                }
                                                @if (Model.SortField.Equals("IsNew"))
                                                {
                                                    if (Model.IsAsc)
                                                    {
                                                        <th class="center" tabindex="0" rowspan="1" data-sort="IsNew" data-direction="desc" colspan="1">Đã đọc <i class="fa fa-fw fa-sort-asc"></i></th>
                                                    }
                                                    else
                                                    {
                                                        <th class="center" tabindex="0" rowspan="1" data-sort="IsNew" data-direction="asc" colspan="1">Đã đọc <i class="fa fa-fw fa-sort-desc"></i></th>
                                                    }
                                                }
                                                else
                                                {
                                                    <th class="center" tabindex="0" rowspan="1" data-sort="IsNew" data-direction="asc" colspan="1">Đã đọc <i class="fa fa-fw fa-sort-asc"></i></th>
                                                }
                                                @if (Model.SortField.Equals("DateCreated"))
                                                {
                                                    if (Model.IsAsc)
                                                    {
                                                        <th class="center" tabindex="0" rowspan="1" data-sort="DateCreated" data-direction="desc" colspan="1">Ngày yêu cầu <i class="fa fa-fw fa-sort-asc"></i></th>
                                                    }
                                                    else
                                                    {
                                                        <th class="center" tabindex="0" rowspan="1" data-sort="DateCreated" data-direction="asc" colspan="1">Ngày yêu cầu <i class="fa fa-fw fa-sort-desc"></i></th>
                                                    }
                                                }
                                                else
                                                {
                                                    <th class="center" tabindex="0" rowspan="1" data-sort="DateCreated" data-direction="asc" colspan="1">Ngày yêu cầu <i class="fa fa-fw fa-sort-asc"></i></th>
                                                }
                                                <th class="center" tabindex="0" rowspan="1" colspan="1"></th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="summary-status" role="status" aria-live="polite">Đang hiển thị record @Model.StartIndex tới @Model.EndIndex trong @Model.TotalNumber records</div>
                            </div>
                            <div class="col-sm-6">
                                <div class="pagination-wrapper">
                                    <ul class="pagination">
                                        @if (Model.CurrentPage == 1)
                                        {
                                            <li class="paginate_button previous disabled" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_previous">
                                                <a href="#">Trước</a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="paginate_button previous" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_previous">
                                                <a href="@Url.Action("ViewRequest", "Administrator", new {page = Model.CurrentPage - 1, itemsPerPage = Model.ItemOnPage, searchText = Model.SearchText, sortField = Model.SortField, isAsc = Model.IsAsc})">Trước</a>
                                            </li>
                                        }

                                        @for (var i = 0; i < 5; i++)
                                        {
                                            if ((Model.CurrentPage + i) <= Model.TotalPage)
                                            {
                                                if (i == 0)
                                                {
                                                    <li class="paginate_button active" aria-controls="dataTables-example" tabindex="0">
                                                        <a href="@Url.Action("ViewRequest", "Administrator", new {page = Model.CurrentPage + i, itemsPerPage = Model.ItemOnPage, searchText = Model.SearchText, sortField = Model.SortField, isAsc = Model.IsAsc})">@((Model.CurrentPage + i).ToString())</a>
                                                    </li>
                                                }
                                                else
                                                {
                                                    <li class="paginate_button" aria-controls="dataTables-example" tabindex="0">
                                                        <a href="@Url.Action("ViewRequest", "Administrator", new { page = Model.CurrentPage + i, itemsPerPage = Model.ItemOnPage, searchText = Model.SearchText, sortField = Model.SortField, isAsc = Model.IsAsc })">@((Model.CurrentPage + i).ToString())</a>
                                                    </li>
                                                }
                                            }
                                        }

                                        @if (Model.CurrentPage == Model.TotalPage)
                                        {
                                            <li class="paginate_button next disabled" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_next">
                                                <a href="#">Sau</a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="paginate_button next" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_next">
                                                <a href="@Url.Action("ViewRequest", "Administrator", new {page = Model.CurrentPage + 1, itemsPerPage = Model.ItemOnPage, searchText = Model.SearchText, sortField = Model.SortField, isAsc = Model.IsAsc})">Sau</a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <h5>Không có record nào được lưu trong cơ sở dữ liệu.</h5>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="@Url.Content("~/Scripts/Admin/request.js")"></script>
}
