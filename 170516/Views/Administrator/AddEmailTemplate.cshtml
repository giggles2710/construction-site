@model _170516.Models.Administrator.EmailTemplateModel
@{
    ViewBag.Title = "Thêm mẫu email";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="main-content-wrapper">
            <div class="panel-heading">
                <ol class="breadcrumb">
                    <li><a href="@Url.Action("ViewEmailTemplate","Administrator")">Quản lý mẫu email</a></li>
                    <li class="active">Thêm mẫu email</li>
                </ol>
                <div class="container-fluid admin-header">
                    <div class="title col-md-6 col-xs-6"><h3>Thêm mẫu email</h3></div>
                </div>
            </div>
            <div class="container-fluid">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "addEmailTemplateForm" }))
                {
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-12 col-lg-12">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="EmailTemplateName">Tên mẫu Email <span class="text-danger">*</span></label>
                                    <div class="col-sm-7">
                                        @Html.TextBoxFor(model => model.EmailTemplateName, new { @class = "form-control" }) <span class="input-error-box text-danger"></span>
                                        @Html.ValidationMessageFor(model => model.EmailTemplateName, null, new { @class = "input-error-box text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="EmailSubject">Tiêu đề <span class="text-danger">*</span></label>
                                    <div class="col-sm-7">
                                        @Html.TextBoxFor(model => model.EmailSubject, new { @class = "form-control" }) <span class="input-error-box text-danger"></span>
                                        @Html.ValidationMessageFor(model => model.EmailSubject, null, new { @class = "input-error-box text-danger" })
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="">Từ khóa</label>
                                    <div class="col-sm-7">
                                        @foreach (var item in Model.MergeFields)
                                        {
                                            <a href="#" class="label label-success">@item</a>
                                        }
                                    </div>
                                </div>
                                @Html.CheckBoxFor(model => model.IsHTML, new { hidden = "hidden" })
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Định dạng <span class="text-danger">*</span></label>
                                    <div class="col-sm-7">
                                        <select class="form-control" onchange="emailTemplateSupport.ChangeHtmlToText(this)" id="ddlEmailFormat">
                                            <option selected>HTML</option>
                                            <option>Plain Text</option>
                                        </select>
                                    </div>
                                </div>
                                
                                
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Sử dụng <span class="text-danger">*</span></label>
                                    <div class="col-sm-7">
                                        @Html.CheckBoxFor(model => model.IsEnable, new { @class = "form-control" })
                                    </div>
                                </div>
                               
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="">Nội dung<span class="text-danger">*</span></label>
                                    <div class="col-sm-7">
                                        <div id="emailTemplate-area-html" @(!Model.IsHTML ? "hidden='hidden'" : "")>
                                            @Html.TextAreaFor(model => model.HtmlBody, new { @class = "mceEditor", @id = "txtA_htmlVersion", @style = "height:250px", maxlength = 5000 })
                                            @Html.ValidationMessageFor(model => model.HtmlBody)
                                        </div>
                                        <div id="emailTemplate-area-text" @(Model.IsHTML ? "hidden='hidden'" : "")>
                                            @Html.TextAreaFor(model => model.PlainText, new { @id = "txtA_textVersion", @style = "min-height:250px; min-width:auto", @class = "form-control", maxlength = 5000 })
                                            @Html.ValidationMessageFor(model => model.PlainText)
                                        </div>                                       
                                    </div>                                    
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-3"></div>
                                    <div class="col-sm-7">
                                        <span class="input-error-box text-danger" id="contentValidation"></span>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-lg-12">
                                <div class="form-group">
                                    <div class="col-md-12 form-button">
                                        <button class="btn btn-primary" type="button" id="SubmitAddEmailTemp"><i class="glyphicon glyphicon-floppy-disk"></i> Lưu</button>
                                        <button class="btn btn-danger" type="reset"><i class="glyphicon glyphicon-remove"></i>Làm mới</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="@Url.Content("~/Scripts/Admin/emailTemplate.js")"></script>
}
