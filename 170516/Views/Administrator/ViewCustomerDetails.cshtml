@model _170516.Models.Administrator.DetailsCustomerModel

@{
    ViewBag.Title = "ViewCustomerDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="content-box-large">
            <div class="panel-heading">
                @*nav bar*@
                <ol class="breadcrumb">
                    <li><a href="@Url.Action("Index","Administrator")">Trang chủ</a></li>
                    <li class="active">Chi tiết Khách hàng</li>
                </ol>
                <div class="panel-title title-3">@string.Format("{0} {1}", @Model.FirstName, @Model.LastName)</div>
            </div>
            <div class="panel-body">
                <div class="form-horizontal">
                    <div class="row">
                        <div class="col-md-12 col-lg-12">
                            
                            @Html.HiddenFor(model => model.CustomerID)
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="ProductName">Tên Khách hàng </label>
                                <div class="col-md-7">
                                    <span class="info-box">@string.Format("{0} {1}", @Model.FirstName, @Model.LastName)</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="ProductName">Email</label>
                                <div class="col-md-7">
                                    <span class="info-box">@Model.EmailAddress</span>
                                </div>
                            </div>

                            <!-- CUSTOMER ADDRESS -->
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="ProductName">Số điện thoại </label>
                                <div class="col-md-7">
                                    <span class="info-box">@Model.Phone</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="ProductName">Địa chỉ </label>
                                <div class="col-md-7">
                                    <span class="info-box">@Model.Address</span>
                                </div>
                            </div>
                           
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="ParentID">Huyện/Phường</label>
                                <div class="col-md-7">
                                    <span class="info-box">@Model.District</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="ParentID">Tỉnh/Thành phố</label>
                                <div class="col-md-7">
                                    <span class="info-box">@Model.City</span>
                                </div>
                            </div>

                            <!-- SHIP ADDRESS -->
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="ProductName">Số điện thoại khi ship đến </label>
                                <div class="col-md-7">
                                    <span class="info-box">@Model.ShipPhone</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="ProductName">Địa chỉ ship đến </label>
                                <div class="col-md-7">
                                    <span class="info-box">@Model.ShipAddress</span>
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="ParentID">Huyện/Phường nơi ship</label>
                                <div class="col-md-7">
                                    <span class="info-box">@Model.ShipDistrict</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="ParentID">Tỉnh/Thành phố nơi ship</label>
                                <div class="col-md-7">
                                    <span class="info-box">@Model.ShipCity</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-lg-12">
                            <div class="form-group">
                                <div class="col-md-12 form-button">
                                    <button class="btn btn-primary" type="button" id="btnGoBack"><i class="glyphicon"></i> Trở về</button>                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="@Url.Content("~/Scripts/Admin/customer.js")"></script>
}