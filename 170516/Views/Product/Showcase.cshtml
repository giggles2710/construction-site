@model _170516.Models.ProductIndexModel
@{
    ViewBag.Title = "Sản Phẩm";
}

<div class="col-lg-3 col-md-3 col-sm-4">
    <!-- menu -->
    <div class="main clearfix">
        <div id="dl-menu" class="dl-menuwrapper">
            <ul class="dl-menu">
                @foreach (var item in Model.Menu)
                {
                    <li>
                        <a href="#" data-id="@item.CategoryId">@item.CategoryName</a>
                        @if (item.SubCategoryList != null && item.SubCategoryList.Any())
                        {
                            <ul class="dl-submenu">
                                <li><a href="#"></a></li>
                            </ul>
                        }
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
<div class="col-lg-9 col-md-9 col-sm-8 content-box">
    <div class="container-fluid" style="
    background: #fff;
         padding-top: 15px;
         padding-bottom: 15px;
         -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    border-radius: 5px;">
        @for (var i = 0; i < Model.MenuOnMainPage.Count; i++)
        {
            <div class="row list-group">
                @*first item in row*@
                @if (i < Model.MenuOnMainPage.Count)
                {
                    <div class="item  col-xs-3 col-lg-3">
                        <div class="thumbnail">
                            @if (!string.IsNullOrEmpty(Model.MenuOnMainPage[i].ImageSrc))
                            {
                                <img class="group list-group-image" src="@Model.MenuOnMainPage[i].ImageSrc" alt="" />
                            }
                            else
                            {
                                <img class="group list-group-image" src="~/Content/Image/image_placeholder.jpg" alt="" />
                            }
                            <div class="caption">
                                <div class="caption-header">
                                    <span class="group inner list-group-item-heading">
                                        @Model.MenuOnMainPage[i].CategoryName
                                    </span>
                                </div>
                                @*<p class="group inner list-group-item-text">

                                    </p>*@
                                <div class="row">
                                    @if (Model.MenuOnMainPage[i].SubCategoryList.Count > 0)
                                    {
                                        <ul class="thumbnail-ul">
                                            @foreach (var subCategory in Model.MenuOnMainPage[i].SubCategoryList)
                                            {
                                                <li><a href="@Url.Action("ShowProduct", "Product", new { id = subCategory.CategoryId })">@subCategory.CategoryName</a></li>
                                            }
                                        </ul>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }

                @*second item in row*@
                @if (i + 1 < Model.MenuOnMainPage.Count)
                {
                    <div class="item  col-xs-3 col-lg-3">
