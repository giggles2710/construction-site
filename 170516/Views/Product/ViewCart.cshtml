@model _170516.Models.CartViewModel
@{
    ViewBag.Title = "Giỏ Hàng";
}

<div class="index-content-wrapper container-fluid">
    <div class="banner dark-translucent-bg non-background">
        <div class="breadcrumb-container">
            <div class="container">
                <ol class="breadcrumb">
                    <li><i class="fa fa-home pr-10"></i><a class="link-dark" href="@Url.Action("Index","Home")">Trang Chủ</a></li>
                    <li class="active">Giỏ Hàng</li>
                </ol>
            </div>
        </div>
    </div>

    <section class="main-container">
        <div class="container">
            <div class="row">
                @using (Html.BeginForm("UpdateCart", "Product", FormMethod.Post, new { @id = "updateCartForm" }))
                {
                    <div class="main col-md-12">
                        <h1 class="page-title">Giỏ Hàng</h1>
                        <div class="separator-2"></div>
                        <table class="table cart table-hover table-colored">
                            <thead>
                                <tr>
                                    <th>Sản Phẩm</th>                                    
                                    <th>Số lượng</th>
                                    <th style="text-align:center;">Giá</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Products.Any())
                                {
                                    for (int i = 0; i < Model.Products.Count; i++)
                                    {
                                        <tr class="remove-data">
                                            @Html.HiddenFor(model => model.Products[i].ProductId)
                                            @Html.HiddenFor(model => model.Products[i].ProductName)
                                            @Html.HiddenFor(model => model.Products[i].Price)
                                            @Html.HiddenFor(model => model.Products[i].Total)
                                            <td class="product product-name">
                                                <a href="@Url.Action("ViewProductDetail", "Product", new { id = Model.Products[i].ProductId })" style="font-size: 16px;font-weight: 600;">@Model.Products[i].ProductName</a> 
                                                <a class="btn-remove deleteProductInCartBtn" data-url="@Url.Action("DeleteProductInCart", "Product", new { @id = Model.Products[i].ProductId })"><span class="small" style="font-size: 12px;margin-top: 10px;cursor: pointer;color: #911808;">Xóa</span></a>
                                            </td>
                                            <td class="quantity">
                                                <div class="form-group">
                                                    @Html.TextBoxFor(model => model.Products[i].Quantity, new { @class = "form-control", @type = "number" })
                                                    <span class="input-error-box text-danger" id="error-pro-@Model.Products[i].ProductId"></span>
                                                </div>
                                            </td>
                                            <td class="price">@Model.Products[i].Total.ToString("N0") đ </td>
                                        </tr>
                                    }
                                }

                                <tr>
                                    <td class="total-quantity" colspan="2">Tổng cộng @Model.Products.Count sản phẩm</td>
                                    <td class="total-amount">
                                        @Model.GrandTotal.ToString("N0") đ
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        @if (@Model.Products.Count > 0)
                        {
                            <div class="text-right">
                                <button type="button" id="UpdateProductCartBtn" class="btn btn-group btn-default">Cập Nhật</button>
                                <a href="@Url.Action("Checkout","Product")" class="btn btn-group btn-default">Thanh Toán</a>
                            </div>
                        }
                        else
                        {
                            <div class="text-right">
                                <a href="@Url.Action("Index","Home")" class="btn btn-group btn-default">Mua sắm</a>
                            </div>
                        }
                    </div>
                }
                <!-- main end -->

            </div>
        </div>
    </section>
</div>