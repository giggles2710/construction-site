@model _170516.Models.Administrator.ShowcaseProductModel
@{
    ViewBag.Title = "Sản phẩm";
}

@if (Model.Products.Any())
{
    <div class="hero_heading">
        <h2>Danh mục sản phẩm</h2>
    </div>
    <div class="row">
        @for (var i = 0; i < Model.Products.Count; i++)
        {
            <div class="row list-group">
                @*first item in row*@
                @if (i < Model.Products.Count)
                {
                    <div class="item  col-xs-3 col-lg-3">
                        <div class="thumbnail">
                            @if (!string.IsNullOrEmpty(Model.Products[i].ImageSrc))
                            {
                                <img class="group list-group-image" src="@Model.Products[i].ImageSrc" alt="" />
                            }
                            else
                            {
                                <img class="group list-group-image" src="http://placehold.it/400x250/000/fff" alt="" />
                            }
                            <div class="caption">
                                <h4 class="group inner list-group-item-heading">
                                    @Model.Products[i].ProductName
                                </h4>
                                <div class="row">
                                    <div class="col-xs-12 col-md-12">
                                        <p class="lead">
                                            @Model.Products[i].Price VNĐ
                                        </p>
                                    </div>
                                    <div class="col-xs-12 col-md-12">
                                        <a class="btn btn-success" href="http://www.jquery2dotnet.com">Add to cart</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                @*second item in row*@
                @if (i + 1 < Model.Products.Count)
                {
                    <div class="item  col-xs-3 col-lg-3">
                        <div class="thumbnail">
                            @if (!string.IsNullOrEmpty(Model.Products[i + 1].ImageSrc))
                            {
                                <img class="group list-group-image" src="@Model.Products[i + 1].ImageSrc" alt="" />
                            }
                            else
                            {
                                <img class="group list-group-image" src="http://placehold.it/400x250/000/fff" alt="" />
                            }
                            <div class="caption">
                                <h4 class="group inner list-group-item-heading">
                                    @Model.Products[i].ProductName
                                </h4>
                                <div class="row">
                                    <div class="col-xs-12 col-md-12">
                                        <p class="lead">
                                            @Model.Products[i].Price VNĐ
                                        </p>
                                    </div>
                                    <div class="col-xs-12 col-md-12">
                                        <a class="btn btn-success" href="http://www.jquery2dotnet.com">Add to cart</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                @*third item in row*@
                @if (i + 2 < Model.Products.Count)
                {
                    <div class="item  col-xs-3 col-lg-3">
                        <div class="thumbnail">
                            @if (!string.IsNullOrEmpty(Model.Products[i + 2].ImageSrc))
                            {
                                <img class="group list-group-image" src="@Model.Products[i + 2].ImageSrc" alt="" />
                            }
                            else
                            {
                                <img class="group list-group-image" src="http://placehold.it/400x250/000/fff" alt="" />
                            }
                            <div class="caption">
                                <h4 class="group inner list-group-item-heading">
                                    @Model.Products[i].ProductName
                                </h4>
                                <div class="row">
                                    <div class="col-xs-12 col-md-12">
                                        <p class="lead">
                                            @Model.Products[i].Price VNĐ
                                        </p>
                                    </div>
                                    <div class="col-xs-12 col-md-12">
                                        <a class="btn btn-success" href="http://www.jquery2dotnet.com">Add to cart</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                @*fourth item in row*@
                @if (i + 3 < Model.Products.Count)
                {
                    <div class="item  col-xs-3 col-lg-3">
                        <div class="thumbnail">
                            @if (!string.IsNullOrEmpty(Model.Products[i + 3].ImageSrc))
                            {
                                <img class="group list-group-image" src="@Model.Products[i + 3].ImageSrc" alt="" />
                            }
                            else
                            {
                                <img class="group list-group-image" src="http://placehold.it/400x250/000/fff" alt="" />
                            }
                            <div class="caption">
                                <h4 class="group inner list-group-item-heading">
                                    @Model.Products[i].ProductName
                                </h4>
                                <div class="row">
                                    <div class="col-xs-12 col-md-12">
                                        <p class="lead">
                                            @Model.Products[i].Price VNĐ
                                        </p>
                                    </div>
                                    <div class="col-xs-12 col-md-12">
                                        <a class="btn btn-success" href="http://www.jquery2dotnet.com">Add to cart</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                @{i = i + 3;}
            </div>
                    }
    </div>
                    }
                    else
                    {
                        <h3>Không có sản phẩm nào được lưu trong cơ sở dữ liệu. Vui lòng thử lại.</h3>
                    }
